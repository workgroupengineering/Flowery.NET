<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="#1e1e2e">
            <StackPanel Spacing="16">
                <TextBlock Text="DaisyUI Variants" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyLoading Variant="Spinner" />
                    <controls:DaisyLoading Variant="Dots" />
                    <controls:DaisyLoading Variant="Ring" />
                    <controls:DaisyLoading Variant="Ball" />
                    <controls:DaisyLoading Variant="Bars" />
                    <controls:DaisyLoading Variant="Infinity" />
                </StackPanel>
                <TextBlock Text="Terminal-Style Variants" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyLoading Variant="Orbit" />
                    <controls:DaisyLoading Variant="Snake" />
                    <controls:DaisyLoading Variant="Pulse" />
                    <controls:DaisyLoading Variant="Wave" />
                    <controls:DaisyLoading Variant="Bounce" />
                </StackPanel>
                <TextBlock Text="Matrix Variants" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyLoading Variant="Matrix" />
                    <controls:DaisyLoading Variant="MatrixInward" />
                    <controls:DaisyLoading Variant="MatrixOutward" />
                    <controls:DaisyLoading Variant="MatrixVertical" />
                </StackPanel>
                <TextBlock Text="Special Effects" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyLoading Variant="MatrixRain" />
                    <controls:DaisyLoading Variant="Hourglass" />
                </StackPanel>
                <TextBlock Text="Sizes" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                    <controls:DaisyLoading Variant="Spinner" Size="ExtraSmall" />
                    <controls:DaisyLoading Variant="Spinner" Size="Small" />
                    <controls:DaisyLoading Variant="Spinner" Size="Medium" />
                    <controls:DaisyLoading Variant="Spinner" Size="Large" />
                    <controls:DaisyLoading Variant="Spinner" Size="ExtraLarge" />
                </StackPanel>
                <TextBlock Text="Colors" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyLoading Variant="Spinner" Color="Primary" />
                    <controls:DaisyLoading Variant="Spinner" Color="Secondary" />
                    <controls:DaisyLoading Variant="Spinner" Color="Accent" />
                    <controls:DaisyLoading Variant="Spinner" Color="Info" />
                    <controls:DaisyLoading Variant="Spinner" Color="Success" />
                    <controls:DaisyLoading Variant="Spinner" Color="Warning" />
                    <controls:DaisyLoading Variant="Spinner" Color="Error" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyLoading}" TargetType="controls:DaisyLoading">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />

        <!-- Default Template (Spinner) -->
        <Setter Property="Template">
            <ControlTemplate>
                <Arc Name="PART_Arc"
                     Classes="spinning"
                     Width="{TemplateBinding Width}"
                     Height="{TemplateBinding Height}"
                     StartAngle="0"
                     SweepAngle="270"
                     Stroke="{TemplateBinding Foreground}"
                     StrokeThickness="3"
                     StrokeLineCap="Round"/>
            </ControlTemplate>
        </Setter>

        <!-- Spinning Animation for Spinner and Ring -->
        <Style Selector="^ /template/ Arc.spinning">
            <Style.Animations>
                <Animation Duration="0:0:0.75" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0.75">
                        <Setter Property="RotateTransform.Angle" Value="360" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- ===================== VARIANTS ===================== -->

        <!-- Dots Variant -->
        <Style Selector="^[Variant=Dots]">
            <Setter Property="Template">
                <ControlTemplate>
                    <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                        <Canvas Width="24" Height="24">
                            <Ellipse Classes="dot1" Width="6" Height="6" Fill="{TemplateBinding Foreground}"
                                     Canvas.Left="0" Canvas.Top="9" />
                            <Ellipse Classes="dot2" Width="6" Height="6" Fill="{TemplateBinding Foreground}"
                                     Canvas.Left="9" Canvas.Top="9" />
                            <Ellipse Classes="dot3" Width="6" Height="6" Fill="{TemplateBinding Foreground}"
                                     Canvas.Left="18" Canvas.Top="9" />
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Dot Bounce Animations -->
        <Style Selector="^[Variant=Dots] /template/ Ellipse.dot1">
            <Style.Animations>
                <Animation Duration="0:0:0.6" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.15"><Setter Property="TranslateTransform.Y" Value="-6"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.3"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.6"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Dots] /template/ Ellipse.dot2">
            <Style.Animations>
                <Animation Duration="0:0:0.6" IterationCount="Infinite" Delay="0:0:0.1">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.15"><Setter Property="TranslateTransform.Y" Value="-6"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.3"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.6"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Dots] /template/ Ellipse.dot3">
            <Style.Animations>
                <Animation Duration="0:0:0.6" IterationCount="Infinite" Delay="0:0:0.2">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.15"><Setter Property="TranslateTransform.Y" Value="-6"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.3"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.6"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Ring Variant -->
        <Style Selector="^[Variant=Ring]">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                        <!-- Background ring -->
                        <Arc StartAngle="0" SweepAngle="360"
                             Stroke="{TemplateBinding Foreground}" StrokeThickness="3" Opacity="0.2"/>
                        <!-- Animated ring -->
                        <Arc Classes="spinning" StartAngle="0" SweepAngle="90"
                             Stroke="{TemplateBinding Foreground}" StrokeThickness="3" StrokeLineCap="Round"/>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Ball Variant -->
        <Style Selector="^[Variant=Ball]">
            <Setter Property="Template">
                <ControlTemplate>
                    <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                        <Canvas Width="24" Height="24" ClipToBounds="False">
                            <Ellipse Classes="ball" Width="10" Height="10" Fill="{TemplateBinding Foreground}"
                                     Canvas.Left="7" Canvas.Top="7" />
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Ball Bounce Animation -->
        <Style Selector="^[Variant=Ball] /template/ Ellipse.ball">
            <Style.Animations>
                <Animation Duration="0:0:0.6" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0">
                        <Setter Property="TranslateTransform.Y" Value="0"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:0.25">
                        <Setter Property="TranslateTransform.Y" Value="-10"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="0.9"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.1"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:0.5">
                        <Setter Property="TranslateTransform.Y" Value="0"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1.2"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.8"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:0.6">
                        <Setter Property="TranslateTransform.Y" Value="0"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Bars Variant -->
        <Style Selector="^[Variant=Bars]">
            <Setter Property="Template">
                <ControlTemplate>
                    <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                        <Canvas Width="24" Height="24">
                            <Border Classes="bar1" Width="4" Height="12" Background="{TemplateBinding Foreground}"
                                    Canvas.Left="2" Canvas.Top="6" CornerRadius="2" />
                            <Border Classes="bar2" Width="4" Height="12" Background="{TemplateBinding Foreground}"
                                    Canvas.Left="10" Canvas.Top="6" CornerRadius="2" />
                            <Border Classes="bar3" Width="4" Height="12" Background="{TemplateBinding Foreground}"
                                    Canvas.Left="18" Canvas.Top="6" CornerRadius="2" />
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Bar Animations -->
        <Style Selector="^[Variant=Bars] /template/ Border.bar1">
            <Style.Animations>
                <Animation Duration="0:0:0.8" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="ScaleTransform.ScaleY" Value="0.4"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.2"><Setter Property="ScaleTransform.ScaleY" Value="1.0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.4"><Setter Property="ScaleTransform.ScaleY" Value="0.4"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.8"><Setter Property="ScaleTransform.ScaleY" Value="0.4"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Bars] /template/ Border.bar2">
            <Style.Animations>
                <Animation Duration="0:0:0.8" IterationCount="Infinite" Delay="0:0:0.15">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="ScaleTransform.ScaleY" Value="0.4"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.2"><Setter Property="ScaleTransform.ScaleY" Value="1.0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.4"><Setter Property="ScaleTransform.ScaleY" Value="0.4"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.8"><Setter Property="ScaleTransform.ScaleY" Value="0.4"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Bars] /template/ Border.bar3">
            <Style.Animations>
                <Animation Duration="0:0:0.8" IterationCount="Infinite" Delay="0:0:0.3">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="ScaleTransform.ScaleY" Value="0.4"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.2"><Setter Property="ScaleTransform.ScaleY" Value="1.0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.4"><Setter Property="ScaleTransform.ScaleY" Value="0.4"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.8"><Setter Property="ScaleTransform.ScaleY" Value="0.4"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Infinity Variant -->
        <Style Selector="^[Variant=Infinity]">
            <Setter Property="Template">
                <ControlTemplate>
                    <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                        <Canvas Width="24" Height="24">
                            <!-- Infinity symbol path -->
                            <Path Classes="infinity" Stroke="{TemplateBinding Foreground}" StrokeThickness="2.5"
                                  StrokeLineCap="Round" StrokeDashArray="12,20" Canvas.Left="2" Canvas.Top="7"
                                  Data="M0,5 C0,0 5,0 10,5 C15,10 20,10 20,5 C20,0 15,0 10,5 C5,10 0,10 0,5" />
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Infinity Animation (dash offset cycling) -->
        <Style Selector="^[Variant=Infinity] /template/ Path.infinity">
            <Style.Animations>
                <Animation Duration="0:0:1.5" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="StrokeDashOffset" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:1.5"><Setter Property="StrokeDashOffset" Value="32"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Orbit Variant (Terminal-style dots moving around square border) -->
        <Style Selector="^[Variant=Orbit]">
            <Setter Property="Template">
                <ControlTemplate>
                    <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                        <Grid Width="24" Height="24">
                            <!-- Square border outline -->
                            <Border BorderBrush="{TemplateBinding Foreground}" BorderThickness="2" Opacity="0.15" CornerRadius="2"/>
                            <!-- Orbiting dots -->
                            <Canvas>
                                <Ellipse Classes="orbit1" Width="4" Height="4" Fill="{TemplateBinding Foreground}" Canvas.Left="0" Canvas.Top="0"/>
                                <Ellipse Classes="orbit2" Width="4" Height="4" Fill="{TemplateBinding Foreground}" Canvas.Left="0" Canvas.Top="0" Opacity="0.7"/>
                                <Ellipse Classes="orbit3" Width="4" Height="4" Fill="{TemplateBinding Foreground}" Canvas.Left="0" Canvas.Top="0" Opacity="0.4"/>
                            </Canvas>
                        </Grid>
                    </Viewbox>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Orbit Animation - moves dots around the square perimeter -->
        <Style Selector="^[Variant=Orbit] /template/ Ellipse.orbit1">
            <Style.Animations>
                <Animation Duration="0:0:1.2" IterationCount="Infinite">
                    <!-- Top edge: left to right -->
                    <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="0"/><Setter Property="Canvas.Top" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.3"><Setter Property="Canvas.Left" Value="20"/><Setter Property="Canvas.Top" Value="0"/></KeyFrame>
                    <!-- Right edge: top to bottom -->
                    <KeyFrame KeyTime="0:0:0.6"><Setter Property="Canvas.Left" Value="20"/><Setter Property="Canvas.Top" Value="20"/></KeyFrame>
                    <!-- Bottom edge: right to left -->
                    <KeyFrame KeyTime="0:0:0.9"><Setter Property="Canvas.Left" Value="0"/><Setter Property="Canvas.Top" Value="20"/></KeyFrame>
                    <!-- Left edge: bottom to top -->
                    <KeyFrame KeyTime="0:0:1.2"><Setter Property="Canvas.Left" Value="0"/><Setter Property="Canvas.Top" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Orbit] /template/ Ellipse.orbit2">
            <Style.Animations>
                <Animation Duration="0:0:1.2" IterationCount="Infinite" Delay="0:0:0.15">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="0"/><Setter Property="Canvas.Top" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.3"><Setter Property="Canvas.Left" Value="20"/><Setter Property="Canvas.Top" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.6"><Setter Property="Canvas.Left" Value="20"/><Setter Property="Canvas.Top" Value="20"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.9"><Setter Property="Canvas.Left" Value="0"/><Setter Property="Canvas.Top" Value="20"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:1.2"><Setter Property="Canvas.Left" Value="0"/><Setter Property="Canvas.Top" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Orbit] /template/ Ellipse.orbit3">
            <Style.Animations>
                <Animation Duration="0:0:1.2" IterationCount="Infinite" Delay="0:0:0.3">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="0"/><Setter Property="Canvas.Top" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.3"><Setter Property="Canvas.Left" Value="20"/><Setter Property="Canvas.Top" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.6"><Setter Property="Canvas.Left" Value="20"/><Setter Property="Canvas.Top" Value="20"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.9"><Setter Property="Canvas.Left" Value="0"/><Setter Property="Canvas.Top" Value="20"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:1.2"><Setter Property="Canvas.Left" Value="0"/><Setter Property="Canvas.Top" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Snake Variant (Centipede-like segments moving back and forth) -->
        <Style Selector="^[Variant=Snake]">
            <Setter Property="Template">
                <ControlTemplate>
                    <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                        <Canvas Width="24" Height="24">
                            <!-- Snake segments -->
                            <Border Classes="seg1" Width="4" Height="4" Background="{TemplateBinding Foreground}" CornerRadius="1" Canvas.Left="0" Canvas.Top="10"/>
                            <Border Classes="seg2" Width="4" Height="4" Background="{TemplateBinding Foreground}" CornerRadius="1" Canvas.Left="0" Canvas.Top="10" Opacity="0.85"/>
                            <Border Classes="seg3" Width="4" Height="4" Background="{TemplateBinding Foreground}" CornerRadius="1" Canvas.Left="0" Canvas.Top="10" Opacity="0.7"/>
                            <Border Classes="seg4" Width="4" Height="4" Background="{TemplateBinding Foreground}" CornerRadius="1" Canvas.Left="0" Canvas.Top="10" Opacity="0.55"/>
                            <Border Classes="seg5" Width="4" Height="4" Background="{TemplateBinding Foreground}" CornerRadius="1" Canvas.Left="0" Canvas.Top="10" Opacity="0.4"/>
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Snake Animation - segments follow each other back and forth -->
        <Style Selector="^[Variant=Snake] /template/ Border.seg1">
            <Style.Animations>
                <Animation Duration="0:0:1.6" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.8"><Setter Property="Canvas.Left" Value="20"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:1.6"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Snake] /template/ Border.seg2">
            <Style.Animations>
                <Animation Duration="0:0:1.6" IterationCount="Infinite" Delay="0:0:0.08">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.8"><Setter Property="Canvas.Left" Value="20"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:1.6"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Snake] /template/ Border.seg3">
            <Style.Animations>
                <Animation Duration="0:0:1.6" IterationCount="Infinite" Delay="0:0:0.16">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.8"><Setter Property="Canvas.Left" Value="20"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:1.6"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Snake] /template/ Border.seg4">
            <Style.Animations>
                <Animation Duration="0:0:1.6" IterationCount="Infinite" Delay="0:0:0.24">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.8"><Setter Property="Canvas.Left" Value="20"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:1.6"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Snake] /template/ Border.seg5">
            <Style.Animations>
                <Animation Duration="0:0:1.6" IterationCount="Infinite" Delay="0:0:0.32">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.8"><Setter Property="Canvas.Left" Value="20"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:1.6"><Setter Property="Canvas.Left" Value="0"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Pulse Variant (Breathing/pulsing effect) -->
        <Style Selector="^[Variant=Pulse]">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                        <!-- Pulsing rings -->
                        <Ellipse Classes="pulse-ring" Stroke="{TemplateBinding Foreground}" StrokeThickness="2" Opacity="0"/>
                        <Ellipse Classes="pulse-ring2" Stroke="{TemplateBinding Foreground}" StrokeThickness="2" Opacity="0"/>
                        <!-- Center dot -->
                        <Ellipse Classes="pulse-center" Width="8" Height="8" Fill="{TemplateBinding Foreground}"
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Pulse Animation -->
        <Style Selector="^[Variant=Pulse] /template/ Ellipse.pulse-ring">
            <Style.Animations>
                <Animation Duration="0:0:1.5" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0">
                        <Setter Property="Opacity" Value="0.8"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="0.3"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.3"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:1.5">
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Pulse] /template/ Ellipse.pulse-ring2">
            <Style.Animations>
                <Animation Duration="0:0:1.5" IterationCount="Infinite" Delay="0:0:0.5">
                    <KeyFrame KeyTime="0:0:0">
                        <Setter Property="Opacity" Value="0.8"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="0.3"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.3"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:1.5">
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="^[Variant=Pulse] /template/ Ellipse.pulse-center">
            <Style.Animations>
                <Animation Duration="0:0:1.5" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:0.75">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.3"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.3"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:1.5">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Wave Variant (Wave of elements) -->
        <Style Selector="^[Variant=Wave]">
            <Setter Property="Template">
                <ControlTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Ellipse Classes="wave1" Width="4" Height="4" Fill="{TemplateBinding Foreground}"/>
                        <Ellipse Classes="wave2" Width="4" Height="4" Fill="{TemplateBinding Foreground}"/>
                        <Ellipse Classes="wave3" Width="4" Height="4" Fill="{TemplateBinding Foreground}"/>
                        <Ellipse Classes="wave4" Width="4" Height="4" Fill="{TemplateBinding Foreground}"/>
                        <Ellipse Classes="wave5" Width="4" Height="4" Fill="{TemplateBinding Foreground}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Wave Animation - smooth sine wave motion -->
        <Style Selector="^[Variant=Wave] /template/ Ellipse.wave1">
            <Style.Animations>
                <Animation Duration="0:0:1" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.25"><Setter Property="TranslateTransform.Y" Value="-6"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.5"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                    <KeyFrame KeyTime="0:0:0.75"><Setter Property="TranslateTransform.Y" Value="6"/></KeyFrame>
