<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="10">
                <controls:DaisyKbd Size="ExtraSmall" Content="XS" />
                <controls:DaisyKbd Size="Small" Content="SM" />
                <controls:DaisyKbd Size="Medium" Content="Ctrl" />
                <controls:DaisyKbd Size="Large" Content="LG" />
                <controls:DaisyKbd Size="ExtraLarge" Content="XL" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyKbd}" TargetType="controls:DaisyKbd">
        <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="Padding" Value="{DynamicResource DaisyKbdMediumPadding}" />
        <Setter Property="CornerRadius" Value="{DynamicResource DaisyKbdMediumCornerRadius}" />
        <Setter Property="BorderThickness" Value="1,1,1,2" />
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        <Setter Property="Height" Value="{DynamicResource DaisyKbdMediumHeight}" />
        <Setter Property="FontSize" Value="{DynamicResource DaisyKbdMediumFontSize}" />
        <Setter Property="FontFamily" Value="Monospace" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />

        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Size: ExtraSmall -->
        <Style Selector="^[Size=ExtraSmall]">
            <Setter Property="Height" Value="{DynamicResource DaisyKbdExtraSmallHeight}" />
            <Setter Property="Padding" Value="{DynamicResource DaisyKbdExtraSmallPadding}" />
            <Setter Property="FontSize" Value="{DynamicResource DaisyKbdExtraSmallFontSize}" />
            <Setter Property="CornerRadius" Value="{DynamicResource DaisyKbdExtraSmallCornerRadius}" />
        </Style>

        <!-- Size: Small -->
        <Style Selector="^[Size=Small]">
            <Setter Property="Height" Value="{DynamicResource DaisyKbdSmallHeight}" />
            <Setter Property="Padding" Value="{DynamicResource DaisyKbdSmallPadding}" />
            <Setter Property="FontSize" Value="{DynamicResource DaisyKbdSmallFontSize}" />
            <Setter Property="CornerRadius" Value="{DynamicResource DaisyKbdSmallCornerRadius}" />
        </Style>

        <!-- Size: Medium is the default, no override needed -->

        <!-- Size: Large -->
        <Style Selector="^[Size=Large]">
            <Setter Property="Height" Value="{DynamicResource DaisyKbdLargeHeight}" />
            <Setter Property="Padding" Value="{DynamicResource DaisyKbdLargePadding}" />
            <Setter Property="FontSize" Value="{DynamicResource DaisyKbdLargeFontSize}" />
            <Setter Property="CornerRadius" Value="{DynamicResource DaisyKbdLargeCornerRadius}" />
        </Style>

        <!-- Size: ExtraLarge -->
        <Style Selector="^[Size=ExtraLarge]">
            <Setter Property="Height" Value="{DynamicResource DaisyKbdExtraLargeHeight}" />
            <Setter Property="Padding" Value="{DynamicResource DaisyKbdExtraLargePadding}" />
            <Setter Property="FontSize" Value="{DynamicResource DaisyKbdExtraLargeFontSize}" />
            <Setter Property="CornerRadius" Value="{DynamicResource DaisyKbdExtraLargeCornerRadius}" />
        </Style>

    </ControlTheme>
</ResourceDictionary>
