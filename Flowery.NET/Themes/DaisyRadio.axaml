<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="10">
                <controls:DaisyRadio Content="Radio 1" GroupName="A" />
                <controls:DaisyRadio Content="Radio 2" GroupName="A" IsChecked="True" />
                <controls:DaisyRadio Content="Primary" Variant="Primary" IsChecked="True" GroupName="B" />
                <controls:DaisyRadio Content="Secondary" Variant="Secondary" IsChecked="True" GroupName="C" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyRadio}" TargetType="controls:DaisyRadio">
        <Setter Property="Padding" Value="8,0,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto,*">
                    <Border x:Name="PART_Border"
                            Grid.Column="0"
                            Width="{DynamicResource DaisyCheckboxMediumSize}" Height="{DynamicResource DaisyCheckboxMediumSize}"
                            CornerRadius="12"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource DaisyBaseContentBrush}"
                            Background="{DynamicResource DaisyBase100Brush}">
                        <Ellipse x:Name="CheckMark"
                                 Width="{DynamicResource DaisyRadioDotMediumSize}" Height="{DynamicResource DaisyRadioDotMediumSize}"
                                 Fill="{DynamicResource DaisyBase100Brush}"
                                 IsVisible="False" />
                    </Border>
                    <ContentPresenter Grid.Column="1"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Margin="{TemplateBinding Padding}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                </Grid>
            </ControlTemplate>
        </Setter>

        <!-- Checked State -->
        <Style Selector="^:checked /template/ Ellipse#CheckMark">
            <Setter Property="IsVisible" Value="True" />
        </Style>
        <Style Selector="^:checked /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource DaisyBaseContentBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyBaseContentBrush}" />
        </Style>

        <!-- Variants -->
        <Style Selector="^[Variant=Primary]:checked /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource DaisyPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
        </Style>

        <Style Selector="^[Variant=Secondary]:checked /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource DaisySecondaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisySecondaryBrush}" />
        </Style>

        <Style Selector="^[Variant=Accent]:checked /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource DaisyAccentBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyAccentBrush}" />
        </Style>

        <Style Selector="^[Variant=Success]:checked /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource DaisySuccessBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisySuccessBrush}" />
        </Style>

        <Style Selector="^[Variant=Warning]:checked /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource DaisyWarningBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyWarningBrush}" />
        </Style>

        <Style Selector="^[Variant=Error]:checked /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource DaisyErrorBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyErrorBrush}" />
        </Style>

        <!-- Sizes -->
        <Style Selector="^[Size=Large] /template/ Border#PART_Border">
            <Setter Property="Width" Value="{DynamicResource DaisyCheckboxLargeSize}" />
            <Setter Property="Height" Value="{DynamicResource DaisyCheckboxLargeSize}" />
             <Setter Property="CornerRadius" Value="16" />
        </Style>
         <Style Selector="^[Size=Large] /template/ Ellipse#CheckMark">
            <Setter Property="Width" Value="{DynamicResource DaisyRadioDotLargeSize}" />
            <Setter Property="Height" Value="{DynamicResource DaisyRadioDotLargeSize}" />
        </Style>

        <Style Selector="^[Size=Small] /template/ Border#PART_Border">
            <Setter Property="Width" Value="{DynamicResource DaisyCheckboxSmallSize}" />
            <Setter Property="Height" Value="{DynamicResource DaisyCheckboxSmallSize}" />
             <Setter Property="CornerRadius" Value="10" />
        </Style>
        <Style Selector="^[Size=Small] /template/ Ellipse#CheckMark">
            <Setter Property="Width" Value="{DynamicResource DaisyRadioDotSmallSize}" />
            <Setter Property="Height" Value="{DynamicResource DaisyRadioDotSmallSize}" />
        </Style>

        <Style Selector="^[Size=ExtraSmall] /template/ Border#PART_Border">
            <Setter Property="Width" Value="{DynamicResource DaisyCheckboxExtraSmallSize}" />
            <Setter Property="Height" Value="{DynamicResource DaisyCheckboxExtraSmallSize}" />
             <Setter Property="CornerRadius" Value="8" />
        </Style>
         <Style Selector="^[Size=ExtraSmall] /template/ Ellipse#CheckMark">
            <Setter Property="Width" Value="{DynamicResource DaisyRadioDotExtraSmallSize}" />
            <Setter Property="Height" Value="{DynamicResource DaisyRadioDotExtraSmallSize}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>
