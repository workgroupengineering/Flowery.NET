<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <!-- ==================== HOURGLASS ==================== -->
    <!-- Hourglass - Classic hourglass with flowing sand -->
    <Style Selector="controls|DaisyLoading[Variant=Hourglass]">
        <Setter Property="Template">
            <ControlTemplate>
                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                    <Grid Width="24" Height="24">
                        <!-- Hourglass outline (frame) -->
                        <Path Stroke="{TemplateBinding Foreground}" StrokeThickness="1.5" Opacity="0.4"
                              Data="M4,2 L20,2 L20,4 L14,10 L14,14 L20,20 L20,22 L4,22 L4,20 L10,14 L10,10 L4,4 Z"/>
                        <!-- Top sand chamber with clip -->
                        <Canvas ClipToBounds="True">
                            <Canvas.Clip>
                                <PathGeometry Figures="M5,3 L19,3 L19,4 L13,10 L11,10 L5,4 Z"/>
                            </Canvas.Clip>
                            <Path Classes="sand-top" Fill="{TemplateBinding Foreground}"
                                  Data="M5,3 L19,3 L19,10 L5,10 Z"/>
                        </Canvas>
                        <!-- Falling sand stream -->
                        <Border Classes="sand-stream" Width="2" Height="4"
                                Background="{TemplateBinding Foreground}"
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <!-- Bottom sand chamber with clip -->
                        <Canvas ClipToBounds="True">
                            <Canvas.Clip>
                                <PathGeometry Figures="M11,14 L13,14 L19,20 L19,21 L5,21 L5,20 Z"/>
                            </Canvas.Clip>
                            <Path Classes="sand-bottom" Fill="{TemplateBinding Foreground}"
                                  Data="M5,14 L19,14 L19,21 L5,21 Z" RenderTransformOrigin="0.5,1"/>
                        </Canvas>
                    </Grid>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

    <!-- Hourglass Animations -->
    <Style Selector="controls|DaisyLoading[Variant=Hourglass] /template/ Path.sand-top">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.8"><Setter Property="TranslateTransform.Y" Value="7"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.9"><Setter Property="TranslateTransform.Y" Value="7"/></KeyFrame>
                <KeyFrame KeyTime="0:0:2"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=Hourglass] /template/ Border.sand-stream">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.7"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.9"><Setter Property="Opacity" Value="0"/></KeyFrame>
                <KeyFrame KeyTime="0:0:2"><Setter Property="Opacity" Value="1"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=Hourglass] /template/ Path.sand-bottom">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="TranslateTransform.Y" Value="7"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.8"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.9"><Setter Property="TranslateTransform.Y" Value="0"/></KeyFrame>
                <KeyFrame KeyTime="0:0:2"><Setter Property="TranslateTransform.Y" Value="7"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ==================== SIGNAL SWEEP ==================== -->
    <!-- SignalSweep - oscilloscope bar scanning left to right -->
    <Style Selector="controls|DaisyLoading[Variant=SignalSweep]">
        <Setter Property="Template">
            <ControlTemplate>
                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                    <Canvas Width="24" Height="24" ClipToBounds="True">
                        <!-- Background grid lines (subtle) -->
                        <Line StartPoint="0,6" EndPoint="24,6" Stroke="{TemplateBinding Foreground}" StrokeThickness="0.5" Opacity="0.15"/>
                        <Line StartPoint="0,12" EndPoint="24,12" Stroke="{TemplateBinding Foreground}" StrokeThickness="0.5" Opacity="0.15"/>
                        <Line StartPoint="0,18" EndPoint="24,18" Stroke="{TemplateBinding Foreground}" StrokeThickness="0.5" Opacity="0.15"/>
                        <!-- Sweep bar with trail -->
                        <Border Classes="sweep-trail" Width="8" Height="20" Canvas.Left="-8" Canvas.Top="2"
                                Opacity="0.3">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                    <GradientStop Offset="0" Color="Transparent"/>
                                    <GradientStop Offset="1" Color="{DynamicResource DaisyBaseContentColor}"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border Classes="sweep-bar" Width="2" Height="20" Canvas.Left="-2" Canvas.Top="2"
                                Background="{TemplateBinding Foreground}" CornerRadius="1"/>
                    </Canvas>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="controls|DaisyLoading[Variant=SignalSweep] /template/ Border.sweep-bar">
        <Style.Animations>
            <Animation Duration="0:0:1.2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="-2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1"><Setter Property="Canvas.Left" Value="24"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.2"><Setter Property="Canvas.Left" Value="-2"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=SignalSweep] /template/ Border.sweep-trail">
        <Style.Animations>
            <Animation Duration="0:0:1.2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Canvas.Left" Value="-8"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1"><Setter Property="Canvas.Left" Value="16"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.2"><Setter Property="Canvas.Left" Value="-8"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ==================== HEARTBEAT ==================== -->
    <!-- Heartbeat - EKG-style pulse line -->
    <Style Selector="controls|DaisyLoading[Variant=Heartbeat]">
        <Setter Property="Template">
            <ControlTemplate>
                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                    <Canvas Width="24" Height="24" ClipToBounds="True">
                        <!-- Baseline -->
                        <Line StartPoint="0,12" EndPoint="24,12" Stroke="{TemplateBinding Foreground}"
                              StrokeThickness="1" Opacity="0.2"/>
                        <!-- Heartbeat path that animates -->
                        <Path Classes="heartbeat-line" Stroke="{TemplateBinding Foreground}" StrokeThickness="1.5"
                              StrokeLineCap="Round" StrokeJoin="Round"
                              Data="M-24,12 L-18,12 L-15,12 L-12,4 L-9,20 L-6,12 L0,12 L6,12 L9,12 L12,4 L15,20 L18,12 L24,12 L30,12 L33,12 L36,4 L39,20 L42,12 L48,12"/>
                    </Canvas>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="controls|DaisyLoading[Variant=Heartbeat] /template/ Path.heartbeat-line">
        <Style.Animations>
            <Animation Duration="0:0:1.5" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="TranslateTransform.X" Value="0"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.5"><Setter Property="TranslateTransform.X" Value="-24"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ==================== TUNNEL ZOOM ==================== -->
    <!-- TunnelZoom - concentric rings expanding outward -->
    <Style Selector="controls|DaisyLoading[Variant=TunnelZoom]">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                    <Ellipse Classes="ring1" Stroke="{TemplateBinding Foreground}" StrokeThickness="1.5"/>
                    <Ellipse Classes="ring2" Stroke="{TemplateBinding Foreground}" StrokeThickness="1.5"/>
                    <Ellipse Classes="ring3" Stroke="{TemplateBinding Foreground}" StrokeThickness="1.5"/>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="controls|DaisyLoading[Variant=TunnelZoom] /template/ Ellipse.ring1">
        <Style.Animations>
            <Animation Duration="0:0:1.5" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="ScaleTransform.ScaleX" Value="0.1"/>
                    <Setter Property="ScaleTransform.ScaleY" Value="0.1"/>
                    <Setter Property="Opacity" Value="1"/>
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1.5">
                    <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                    <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    <Setter Property="Opacity" Value="0"/>
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=TunnelZoom] /template/ Ellipse.ring2">
        <Style.Animations>
            <Animation Duration="0:0:1.5" IterationCount="Infinite" Delay="0:0:0.5">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="ScaleTransform.ScaleX" Value="0.1"/>
                    <Setter Property="ScaleTransform.ScaleY" Value="0.1"/>
                    <Setter Property="Opacity" Value="1"/>
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1.5">
                    <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                    <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    <Setter Property="Opacity" Value="0"/>
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=TunnelZoom] /template/ Ellipse.ring3">
        <Style.Animations>
            <Animation Duration="0:0:1.5" IterationCount="Infinite" Delay="0:0:1">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="ScaleTransform.ScaleX" Value="0.1"/>
                    <Setter Property="ScaleTransform.ScaleY" Value="0.1"/>
                    <Setter Property="Opacity" Value="1"/>
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1.5">
                    <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                    <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    <Setter Property="Opacity" Value="0"/>
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ==================== GLITCH REVEAL ==================== -->
    <!-- GlitchReveal - random columns flash like terminal glitch -->
    <Style Selector="controls|DaisyLoading[Variant=GlitchReveal]">
        <Setter Property="Template">
            <ControlTemplate>
                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                    <Canvas Width="24" Height="24">
                        <Border Classes="glitch1" Width="3" Height="24" Canvas.Left="0" Canvas.Top="0"
                                Background="{TemplateBinding Foreground}" Opacity="0.2"/>
                        <Border Classes="glitch2" Width="3" Height="24" Canvas.Left="4" Canvas.Top="0"
                                Background="{TemplateBinding Foreground}" Opacity="0.2"/>
                        <Border Classes="glitch3" Width="3" Height="24" Canvas.Left="8" Canvas.Top="0"
                                Background="{TemplateBinding Foreground}" Opacity="0.2"/>
                        <Border Classes="glitch4" Width="3" Height="24" Canvas.Left="12" Canvas.Top="0"
                                Background="{TemplateBinding Foreground}" Opacity="0.2"/>
                        <Border Classes="glitch5" Width="3" Height="24" Canvas.Left="16" Canvas.Top="0"
                                Background="{TemplateBinding Foreground}" Opacity="0.2"/>
                        <Border Classes="glitch6" Width="3" Height="24" Canvas.Left="20" Canvas.Top="0"
                                Background="{TemplateBinding Foreground}" Opacity="0.2"/>
                    </Canvas>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

    <!-- GlitchReveal Animations - pseudo-random glitch pattern -->
    <Style Selector="controls|DaisyLoading[Variant=GlitchReveal] /template/ Border.glitch1">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.1"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.15"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.8"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.85"><Setter Property="Opacity" Value="0.8"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.9"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:2"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=GlitchReveal] /template/ Border.glitch2">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.3"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.35"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.5"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.55"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.2"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.25"><Setter Property="Opacity" Value="0.9"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.3"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:2"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=GlitchReveal] /template/ Border.glitch3">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.2"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.25"><Setter Property="Opacity" Value="0.7"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.3"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.9"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.95"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.1"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.15"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:2"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=GlitchReveal] /template/ Border.glitch4">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.5"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.55"><Setter Property="Opacity" Value="0.8"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.6"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.65"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.7"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.5"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.55"><Setter Property="Opacity" Value="0.9"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.6"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:2"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=GlitchReveal] /template/ Border.glitch5">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.15"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.2"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.35"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.4"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.3"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.35"><Setter Property="Opacity" Value="0.7"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.4"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:2"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyLoading[Variant=GlitchReveal] /template/ Border.glitch6">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.7"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.75"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.8"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.85"><Setter Property="Opacity" Value="0.6"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.9"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.7"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.75"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.85"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1.9"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
                <KeyFrame KeyTime="0:0:2"><Setter Property="Opacity" Value="0.2"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ==================== CURSOR BLINK ==================== -->
    <!-- CursorBlink - classic CLI cursor that moves and blinks -->
    <Style Selector="controls|DaisyLoading[Variant=CursorBlink]">
        <Setter Property="Template">
            <ControlTemplate>
                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                    <Canvas Width="24" Height="24">
                        <!-- Prompt symbol > -->
                        <TextBlock Text=">" FontFamily="Consolas,monospace" FontSize="12" FontWeight="Bold"
                                   Foreground="{TemplateBinding Foreground}" Canvas.Left="2" Canvas.Top="5" Opacity="0.6"/>
                        <!-- Blinking cursor block -->
                        <Border Classes="cursor-block" Width="6" Height="12" Canvas.Left="10" Canvas.Top="6"
                                Background="{TemplateBinding Foreground}"/>
                    </Canvas>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="controls|DaisyLoading[Variant=CursorBlink] /template/ Border.cursor-block">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.5"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame KeyTime="0:0:0.51"><Setter Property="Opacity" Value="0"/></KeyFrame>
                <KeyFrame KeyTime="0:0:1"><Setter Property="Opacity" Value="0"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

</Styles>
