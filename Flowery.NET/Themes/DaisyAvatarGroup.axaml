<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20">
            <controls:DaisyAvatarGroup Overlap="20">
                <controls:DaisyAvatar Size="Small">
                    <Border Background="Red" CornerRadius="16" />
                </controls:DaisyAvatar>
                <controls:DaisyAvatar Size="Small">
                    <Border Background="Green" CornerRadius="16" />
                </controls:DaisyAvatar>
                <controls:DaisyAvatar Size="Small">
                    <Border Background="Blue" CornerRadius="16" />
                </controls:DaisyAvatar>
                <controls:DaisyAvatar Size="Small" IsPlaceholder="True">
                    <TextBlock Text="+5" FontWeight="Bold"
                               VerticalAlignment="Center" HorizontalAlignment="Center" />
                </controls:DaisyAvatar>
            </controls:DaisyAvatarGroup>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyAvatarGroup}" TargetType="controls:DaisyAvatarGroup">
        <Setter Property="Overlap" Value="16" />
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <controls:DaisyAvatarGroupPanel
                    Overlap="{Binding Overlap, RelativeSource={RelativeSource AncestorType=controls:DaisyAvatarGroup}}"
                    MaxVisible="{Binding MaxVisible, RelativeSource={RelativeSource AncestorType=controls:DaisyAvatarGroup}}" />
            </ItemsPanelTemplate>
        </Setter>

        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <ItemsPresenter Name="PART_ItemsPresenter" ItemsPanel="{TemplateBinding ItemsPanel}" />
                    <controls:DaisyAvatar Name="PART_OverflowAvatar"
                                        Size="{Binding Size, RelativeSource={RelativeSource TemplatedParent}}"
                                        IsPlaceholder="True"
                                        IsVisible="{Binding OverflowCount, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static controls:IndicatorConverters.GreaterThanZeroConverter}}"
                                        BorderThickness="2"
                                        BorderBrush="{DynamicResource DaisyBase100Brush}">
                        <TextBlock Text="{Binding OverflowCount, RelativeSource={RelativeSource TemplatedParent}, StringFormat='+{0}'}"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                    </controls:DaisyAvatar>
                </Grid>
            </ControlTemplate>
        </Setter>

        <!-- Overlap scales with global size tiers -->
        <Style Selector="^[Size=ExtraSmall]">
            <Setter Property="Overlap" Value="8" />
        </Style>
        <Style Selector="^[Size=Small]">
            <Setter Property="Overlap" Value="12" />
        </Style>
        <Style Selector="^[Size=Medium]">
            <Setter Property="Overlap" Value="16" />
        </Style>
        <Style Selector="^[Size=Large]">
            <Setter Property="Overlap" Value="32" />
        </Style>
        <Style Selector="^[Size=ExtraLarge]">
            <Setter Property="Overlap" Value="40" />
        </Style>
    </ControlTheme>
</ResourceDictionary>
