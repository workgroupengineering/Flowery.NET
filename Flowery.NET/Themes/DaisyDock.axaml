<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="#F0F0F0">
            <controls:DaisyDock>
                <Button Classes="dock-active">
                    <StackPanel>
                        <PathIcon Data="{StaticResource DaisyIconHome}" />
                        <TextBlock Classes="dock-label" Text="Home" />
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel>
                        <PathIcon Data="{StaticResource DaisyIconSettings}" />
                        <TextBlock Classes="dock-label" Text="Settings" />
                    </StackPanel>
                </Button>
            </controls:DaisyDock>
        </Border>
    </Design.PreviewWith>

    <!-- DaisyDock Style -->
    <Style Selector="controls|DaisyDock">
        <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="Height" Value="64" />
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4" />
            </ItemsPanelTemplate>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        HorizontalAlignment="Center">
                    <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <!-- Dock Item (Button) Style -->
    <Style Selector="controls|DaisyDock > :is(Button)">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- FluentTheme Button template uses ContentPresenter#PART_ContentPresenter (not a Border) -->
    <Style Selector="controls|DaisyDock > :is(Button):pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource DaisyBase300Brush}" />
    </Style>

    <!-- Active Dock Item -->
    <Style Selector="controls|DaisyDock > :is(Button).dock-active">
         <Setter Property="Background" Value="{DynamicResource DaisyBase300Brush}" />
    </Style>

    <!-- Dock Label -->
    <Style Selector="controls|DaisyDock :is(TextBlock).dock-label">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,2,0,0" />
        <Setter Property="Opacity" Value="0.7" />
    </Style>

    <Style Selector="controls|DaisyDock > :is(Button).dock-active :is(TextBlock).dock-label">
        <Setter Property="Opacity" Value="1.0" />
    </Style>

    <!-- Sizes -->
    <Style Selector="controls|DaisyDock[Size=ExtraSmall]">
        <Setter Property="Height" Value="48" />
        <Setter Property="Padding" Value="2" />
    </Style>
    <Style Selector="controls|DaisyDock[Size=ExtraSmall] > :is(Button)">
        <Setter Property="Padding" Value="4,2" />
    </Style>
    <Style Selector="controls|DaisyDock[Size=ExtraSmall] :is(TextBlock).dock-label">
        <Setter Property="FontSize" Value="8" />
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style Selector="controls|DaisyDock[Size=Small]">
        <Setter Property="Height" Value="56" />
    </Style>
    <Style Selector="controls|DaisyDock[Size=Small] > :is(Button)">
        <Setter Property="Padding" Value="8,4" />
    </Style>
    <Style Selector="controls|DaisyDock[Size=Small] :is(TextBlock).dock-label">
        <Setter Property="FontSize" Value="9" />
    </Style>

    <Style Selector="controls|DaisyDock[Size=Large]">
        <Setter Property="Height" Value="72" />
    </Style>
    <Style Selector="controls|DaisyDock[Size=Large] > :is(Button)">
        <Setter Property="Padding" Value="16,8" />
    </Style>
    <Style Selector="controls|DaisyDock[Size=Large] :is(TextBlock).dock-label">
        <Setter Property="FontSize" Value="11" />
    </Style>

    <Style Selector="controls|DaisyDock[Size=ExtraLarge]">
        <Setter Property="Height" Value="80" />
    </Style>
    <Style Selector="controls|DaisyDock[Size=ExtraLarge] > :is(Button)">
        <Setter Property="Padding" Value="20,10" />
    </Style>
    <Style Selector="controls|DaisyDock[Size=ExtraLarge] :is(TextBlock).dock-label">
        <Setter Property="FontSize" Value="12" />
    </Style>

</Styles>
