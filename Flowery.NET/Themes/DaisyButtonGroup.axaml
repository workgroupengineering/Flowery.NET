        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="RenderTransformOrigin" Value="50%,50%" />
        <Setter Property="Margin" Value="-1,0,0,0" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup > :is(Button):nth-child(1)">
        <Setter Property="CornerRadius" Value="8,0,0,8" />
        <Setter Property="Margin" Value="0" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup > :is(Button):nth-last-child(1)">
        <Setter Property="CornerRadius" Value="0,8,8,0" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[Shape=Rounded] > :is(Button):nth-child(1)">
        <Setter Property="CornerRadius" Value="12,0,0,12" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[Shape=Rounded] > :is(Button):nth-last-child(1)">
        <Setter Property="CornerRadius" Value="0,12,12,0" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[Shape=Pill] > :is(Button):nth-child(1)">
        <Setter Property="CornerRadius" Value="9999,0,0,9999" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[Shape=Pill] > :is(Button):nth-last-child(1)">
        <Setter Property="CornerRadius" Value="0,9999,9999,0" />
