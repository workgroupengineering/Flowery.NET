<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Styles.Resources>
        <!-- Divider brushes (semi-transparent content colors for colored variants) -->
        <SolidColorBrush x:Key="DaisyButtonGroupPrimaryDividerBrush" Color="{DynamicResource DaisyPrimaryContentColor}" Opacity="0.3" />
        <SolidColorBrush x:Key="DaisyButtonGroupSecondaryDividerBrush" Color="{DynamicResource DaisySecondaryContentColor}" Opacity="0.3" />
        <SolidColorBrush x:Key="DaisyButtonGroupAccentDividerBrush" Color="{DynamicResource DaisyAccentContentColor}" Opacity="0.3" />
        <SolidColorBrush x:Key="DaisyButtonGroupInfoDividerBrush" Color="{DynamicResource DaisyInfoContentColor}" Opacity="0.3" />
        <SolidColorBrush x:Key="DaisyButtonGroupSuccessDividerBrush" Color="{DynamicResource DaisySuccessContentColor}" Opacity="0.3" />
        <SolidColorBrush x:Key="DaisyButtonGroupWarningDividerBrush" Color="{DynamicResource DaisyWarningContentColor}" Opacity="0.3" />
        <SolidColorBrush x:Key="DaisyButtonGroupErrorDividerBrush" Color="{DynamicResource DaisyErrorContentColor}" Opacity="0.3" />
    </Styles.Resources>

    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="14">
                <controls:DaisyButtonGroup>
                    <Button Content="Download" />
                    <Border>
                        <TextBlock Text="15k" />
                    </Border>
                </controls:DaisyButtonGroup>

                <controls:DaisyButtonGroup Variant="Primary" Shape="Pill">
                    <Button Width="60" Content="Back" />
                    <Button Width="60" Content="Play" />
                    <Button Width="60" Content="Pause" />
                    <Button Width="60" Content="Next" />
                </controls:DaisyButtonGroup>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- DaisyButtonGroup container -->
    <Style Selector="controls|DaisyButtonGroup">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" Spacing="0" />
            </ItemsPanelTemplate>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Panel ClipToBounds="False">
                    <Border Name="PART_Background"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}"
                            ClipToBounds="True">
                        <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}" />
                    </Border>
                    <Rectangle Name="PART_DashBorder"
                               IsVisible="False"
                               Stroke="{TemplateBinding BorderBrush}"
                               StrokeThickness="1"
                               StrokeDashArray="4,2"
                               RadiusX="8" RadiusY="8" />
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>

    <!-- Orientation -->
    <Style Selector="controls|DaisyButtonGroup[Orientation=Vertical]">
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Orientation="Vertical" Spacing="0" />
            </ItemsPanelTemplate>
        </Setter>
    </Style>

    <!-- Shape -->
    <Style Selector="controls|DaisyButtonGroup[Shape=Square]">
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[Shape=Rounded]">
        <Setter Property="CornerRadius" Value="12" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[Shape=Pill]">
        <Setter Property="CornerRadius" Value="9999" />
    </Style>

    <!-- Shadow -->
    <Style Selector="controls|DaisyButtonGroup[ShowShadow=True] /template/ Border#PART_Background">
        <Setter Property="BoxShadow" Value="0 2 8 #20000000" />
    </Style>

    <!-- Dash border (outer) -->
    <Style Selector="controls|DaisyButtonGroup[ButtonStyle=Dash]">
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBaseContentBrush}" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[ButtonStyle=Dash] /template/ Rectangle#PART_DashBorder">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[ButtonStyle=Dash][Shape=Square] /template/ Rectangle#PART_DashBorder">
        <Setter Property="RadiusX" Value="0" />
        <Setter Property="RadiusY" Value="0" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[ButtonStyle=Dash][Shape=Rounded] /template/ Rectangle#PART_DashBorder">
        <Setter Property="RadiusX" Value="12" />
        <Setter Property="RadiusY" Value="12" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup[ButtonStyle=Dash][Shape=Pill] /template/ Rectangle#PART_DashBorder">
        <Setter Property="RadiusX" Value="9999" />
        <Setter Property="RadiusY" Value="9999" />
    </Style>

