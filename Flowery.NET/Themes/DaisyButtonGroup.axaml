    <!-- Interactions -->
    <Style Selector="controls|DaisyButtonGroup > :is(Button):pointerover">
        <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
    </Style>
    <!-- FluentTheme applies hover border directly on ContentPresenter#PART_ContentPresenter; override (scoped to DaisyButtonGroup) -->
    <Style Selector="controls|DaisyButtonGroup > :is(Button):pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup > :is(Button):pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup > :is(Button):focus">
        <Setter Property="ZIndex" Value="1" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup > :is(Button):disabled">
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="Cursor" Value="Arrow" />
    </Style>
    <Style Selector="controls|DaisyButtonGroup > :is(Button).button-group-active">
        <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
    </Style>

    <!-- ToggleButton uses the same ContentPresenter template part in FluentTheme -->
