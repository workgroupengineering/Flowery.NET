<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource DaisyBase200Brush}">
            <controls:DaisyExpandableCard ExpandedContent="Expanded Info" IsExpanded="True">
                <TextBlock Text="Main Content" />
            </controls:DaisyExpandableCard>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyExpandableCard}" TargetType="controls:DaisyExpandableCard">
        <!-- Inherit defaults from DaisyCard properties -->
        <Setter Property="Background" Value="{DynamicResource DaisyBase100Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="BodyPadding" Value="16" />
        <Setter Property="BodyFontSize" Value="14" />
        <Setter Property="TitleFontSize" Value="20" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="IsGlass" Value="False" />
        <Setter Property="GlassBlur" Value="40" />
        <Setter Property="GlassOpacity" Value="0.3" />
        <Setter Property="GlassTint" Value="White" />
        <Setter Property="GlassTintOpacity" Value="0.5" />
        <Setter Property="GlassBorderOpacity" Value="0.2" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.1" OffsetX="0" OffsetY="2" />
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- Standard solid background -->
                    <Border x:Name="PART_SolidBackground"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding BodyPadding}"
                            TextElement.FontSize="{TemplateBinding BodyFontSize}">
                        <Grid ColumnDefinitions="Auto, Auto">
                            <ContentPresenter x:Name="PART_SolidContent"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}" />

                            <!-- Expanded Content Wrapper -->
                            <Border x:Name="PART_SolidExpandedWrapper"
                                    Grid.Column="1"
                                    ClipToBounds="True"
                                    Width="0"
                                    Opacity="0">
                                <ContentPresenter x:Name="PART_SolidExpandedContent"
                                                  Content="{TemplateBinding ExpandedContent}"
                                                  ContentTemplate="{TemplateBinding ExpandedContentTemplate}"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Glass effect background (hidden by default) -->
                    <Panel x:Name="PART_GlassPanel" IsVisible="False" ClipToBounds="True">
                        <!-- Glass Layers -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Background>
                                <SolidColorBrush Color="{TemplateBinding GlassTint}"
                                                 Opacity="{TemplateBinding GlassOpacity}" />
                            </Border.Background>
                        </Border>

                        <!-- Frosted/matte overlay -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%" Opacity="0.4">
                                    <GradientStop Offset="0" Color="#E8E8E8" />
                                    <GradientStop Offset="0.25" Color="#F0F0F0" />
                                    <GradientStop Offset="0.5" Color="#E5E5E5" />
                                    <GradientStop Offset="0.75" Color="#EBEBEB" />
                                    <GradientStop Offset="1" Color="#E0E0E0" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Secondary texture layer -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Background>
                                <RadialGradientBrush Center="30%,30%" GradientOrigin="20%,20%" Opacity="0.15">
                                    <GradientStop Offset="0" Color="#FFFFFF" />
                                    <GradientStop Offset="0.5" Color="#C0C0C0" />
                                    <GradientStop Offset="1" Color="#00FFFFFF" />
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Top shine -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                VerticalAlignment="Top"
                                Height="50">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="#40FFFFFF" />
                                    <GradientStop Offset="0.5" Color="#15FFFFFF" />
                                    <GradientStop Offset="1" Color="#00FFFFFF" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Inner highlight border -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="1"
                                Margin="1">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="#50FFFFFF" />
                                    <GradientStop Offset="0.3" Color="#25FFFFFF" />
                                    <GradientStop Offset="1" Color="#10FFFFFF" />
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                        </Border>

                        <!-- Content -->
                        <Border Padding="{TemplateBinding BodyPadding}"
                                TextElement.FontSize="{TemplateBinding BodyFontSize}">
                            <Grid ColumnDefinitions="Auto, Auto">
                                <ContentPresenter x:Name="PART_GlassContent"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}" />

                                <!-- Expanded Content Wrapper -->
                                <Border x:Name="PART_GlassExpandedWrapper"
                                        Grid.Column="1"
                                        ClipToBounds="True"
                                        Width="0"
                                        Opacity="0">
                                    <ContentPresenter x:Name="PART_GlassExpandedContent"
                                                      Content="{TemplateBinding ExpandedContent}"
                                                      ContentTemplate="{TemplateBinding ExpandedContentTemplate}"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Outer border -->
                         <Border CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="1">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#000000" Opacity="0.08" />
                            </Border.BorderBrush>
                        </Border>
                    </Panel>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- Glass mode -->
        <Style Selector="^[IsGlass=True] /template/ Border#PART_SolidBackground">
            <Setter Property="IsVisible" Value="False" />
        </Style>
        <Style Selector="^[IsGlass=True] /template/ Panel#PART_GlassPanel">
            <Setter Property="IsVisible" Value="True" />
        </Style>
        <Style Selector="^[IsGlass=True]">
            <Setter Property="Effect" Value="{x:Null}" />
        </Style>

    </ControlTheme>
</ResourceDictionary>
