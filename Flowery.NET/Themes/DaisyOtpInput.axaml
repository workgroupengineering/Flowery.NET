<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

  <Design.PreviewWith>
    <Border Padding="20" Background="{DynamicResource DaisyBase200Brush}">
      <StackPanel Spacing="16">
        <controls:DaisyOtpInput Length="6" SeparatorInterval="3" />
        <controls:DaisyOtpInput Length="4" Size="Small" />
        <controls:DaisyOtpInput Length="8" Size="Large" SeparatorInterval="4" />
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <Style Selector="controls|DaisyOtpInput">
    <Setter Property="Orientation" Value="Horizontal" />
    <Setter Property="Spacing" Value="6" />
  </Style>

  <Style Selector="controls|DaisyOtpInput TextBlock.otp-separator">
    <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
    <Setter Property="Opacity" Value="0.6" />
    <Setter Property="Margin" Value="4,0" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>

  <Style Selector="controls|DaisyOtpInput TextBox.otp-slot">
    <Setter Property="Background" Value="{DynamicResource DaisyBase100Brush}" />
    <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="TextAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="36" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
        <ThicknessTransition Property="BorderThickness" Duration="0:0:0.1" />
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="controls|DaisyOtpInput TextBox.otp-slot:pointerover">
    <Setter Property="BorderBrush" Value="{DynamicResource DaisyBaseContentBrush}" />
  </Style>

  <Style Selector="controls|DaisyOtpInput TextBox.otp-slot:focus">
    <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
    <Setter Property="BorderThickness" Value="2" />
  </Style>

  <Style Selector="controls|DaisyOtpInput TextBox.otp-slot:disabled">
    <Setter Property="Opacity" Value="0.5" />
  </Style>

  <!-- Sizes -->
  <Style Selector="controls|DaisyOtpInput[Size=ExtraSmall] TextBox.otp-slot">
    <Setter Property="Width" Value="24" />
    <Setter Property="Height" Value="24" />
    <Setter Property="FontSize" Value="12" />
  </Style>

  <Style Selector="controls|DaisyOtpInput[Size=Small] TextBox.otp-slot">
    <Setter Property="Width" Value="30" />
    <Setter Property="Height" Value="30" />
    <Setter Property="FontSize" Value="13" />
  </Style>

  <Style Selector="controls|DaisyOtpInput[Size=Medium] TextBox.otp-slot">
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="36" />
    <Setter Property="FontSize" Value="14" />
  </Style>

  <Style Selector="controls|DaisyOtpInput[Size=Large] TextBox.otp-slot">
    <Setter Property="Width" Value="44" />
    <Setter Property="Height" Value="44" />
    <Setter Property="FontSize" Value="16" />
  </Style>

  <Style Selector="controls|DaisyOtpInput[Size=ExtraLarge] TextBox.otp-slot">
    <Setter Property="Width" Value="52" />
    <Setter Property="Height" Value="52" />
    <Setter Property="FontSize" Value="18" />
  </Style>

</Styles>
