<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Width="400">
            <StackPanel Spacing="20">
                <TextBlock Text="Arrow variant (default)" FontWeight="Bold" />
                <controls:DaisyAccordion ExpandedIndex="0">
                    <controls:DaisyAccordionItem Header="How do I create an account?">
                        <TextBlock Text="Click the Sign Up button in the top right corner and follow the registration process." TextWrapping="Wrap" />
                    </controls:DaisyAccordionItem>
                    <controls:DaisyAccordionItem Header="I forgot my password. What should I do?">
                        <TextBlock Text="Click on Forgot Password on the login page and follow the instructions sent to your email." TextWrapping="Wrap" />
                    </controls:DaisyAccordionItem>
                    <controls:DaisyAccordionItem Header="How do I update my profile information?">
                        <TextBlock Text="Go to My Account settings and select Edit Profile to make changes." TextWrapping="Wrap" />
                    </controls:DaisyAccordionItem>
                </controls:DaisyAccordion>

                <TextBlock Text="Plus variant" FontWeight="Bold" />
                <controls:DaisyAccordion Variant="Plus" ExpandedIndex="0">
                    <controls:DaisyAccordionItem Header="Question 1">
                        <TextBlock Text="Answer 1" />
                    </controls:DaisyAccordionItem>
                    <controls:DaisyAccordionItem Header="Question 2">
                        <TextBlock Text="Answer 2" />
                    </controls:DaisyAccordionItem>
                </controls:DaisyAccordion>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- DaisyAccordion (container) -->
    <ControlTheme x:Key="{x:Type controls:DaisyAccordion}" TargetType="controls:DaisyAccordion">
        <Setter Property="Background" Value="Transparent" />

        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Spacing="0" />
            </ItemsPanelTemplate>
        </Setter>

        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <!-- DaisyAccordionItem -->
    <ControlTheme x:Key="{x:Type controls:DaisyAccordionItem}" TargetType="controls:DaisyAccordionItem">
        <Setter Property="Background" Value="{DynamicResource DaisyBase100Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />

        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid RowDefinitions="Auto, Auto">
                        <ToggleButton Name="PART_HeaderButton"
                                      Grid.Row="0"
                                      Padding="{TemplateBinding Padding}"
                                      MinHeight="48"
                                      HorizontalAlignment="Stretch"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Cursor="Hand"
                                      IsChecked="{TemplateBinding IsExpanded, Mode=TwoWay}">
                            <ToggleButton.Template>
                                <ControlTemplate>
                                    <Grid Background="Transparent" ColumnDefinitions="*, Auto">
                                        <ContentPresenter Content="{TemplateBinding Content}"
                                                          VerticalAlignment="Center"
                                                          FontWeight="SemiBold"
                                                          Margin="10,0,12,0" />

                                        <!-- Arrow Icon -->
                                        <Path Name="Arrow"
                                              Grid.Column="1"
                                              Data="M1,1 L5,5 L9,1"
                                              Stroke="{TemplateBinding Foreground}"
                                              StrokeThickness="2"
                                              Width="12"
                                              Height="8"
                                              Stretch="Uniform"
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0"
                                              RenderTransformOrigin="50%,50%">
                                            <Path.Transitions>
                                                <Transitions>
                                                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                                                </Transitions>
                                            </Path.Transitions>
                                        </Path>

                                        <!-- Plus/Minus Icon -->
                                        <Grid Name="PlusMinus" Grid.Column="1" IsVisible="False" Width="12" Height="12" Margin="0,0,10,0">
                                            <Path Data="M0,6 L12,6 M6,0 L6,12"
                                                  Stroke="{TemplateBinding Foreground}"
                                                  StrokeThickness="2"
                                                  Stretch="None" />
                                        </Grid>
                                    </Grid>
                                </ControlTemplate>
                            </ToggleButton.Template>
                            <ToggleButton.Content>
                                <ContentPresenter Content="{Binding Header, RelativeSource={RelativeSource AncestorType=controls:DaisyAccordionItem}}" />
                            </ToggleButton.Content>
                        </ToggleButton>

                        <!-- Content -->
                        <ContentPresenter Name="PART_ContentPresenter"
                                          Grid.Row="1"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          IsVisible="{TemplateBinding IsExpanded}"
                                          Padding="{TemplateBinding Padding}" />
                        </Grid>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Expanded State Animations -->
        <Style Selector="^[IsExpanded=True] /template/ Path#Arrow">
            <Setter Property="RenderTransform" Value="rotate(180deg)" />
        </Style>

        <!-- Plus Variant -->
        <Style Selector="^[Variant=Plus] /template/ Path#Arrow">
            <Setter Property="IsVisible" Value="False" />
        </Style>
        <Style Selector="^[Variant=Plus] /template/ Grid#PlusMinus">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="RenderTransformOrigin" Value="50%,50%" />
            <Setter Property="RenderTransform" Value="rotate(0deg)" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="^[Variant=Plus][IsExpanded=True] /template/ Grid#PlusMinus">
            <Setter Property="RenderTransform" Value="rotate(45deg)" />
        </Style>
    </ControlTheme>

</ResourceDictionary>
