                                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                    <controls:DaisyLoading Variant="SignalSweep" Size="Medium" />
                                    <controls:DaisyLoading Variant="SignalSweep" Size="Large" Color="Info" />
                                    <controls:DaisyLoading Variant="SignalSweep" Size="ExtraLarge" Color="Success" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Spacing="10" Margin="0,0,40,12">
                                <TextBlock Text="Heartbeat (EKG pulse)" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                    <controls:DaisyLoading Variant="Heartbeat" Size="Medium" />
                                    <controls:DaisyLoading Variant="Heartbeat" Size="Large" Color="Error" />
                                    <controls:DaisyLoading Variant="Heartbeat" Size="ExtraLarge" Color="Success" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Spacing="10" Margin="0,0,40,12">
                                <TextBlock Text="TunnelZoom (warp tunnel)" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                    <controls:DaisyLoading Variant="TunnelZoom" Size="Medium" />
                                    <controls:DaisyLoading Variant="TunnelZoom" Size="Large" Color="Primary" />
                                    <controls:DaisyLoading Variant="TunnelZoom" Size="ExtraLarge" Color="Info" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Spacing="10" Margin="0,0,40,12">
                                <TextBlock Text="GlitchReveal (terminal glitch)" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                    <controls:DaisyLoading Variant="GlitchReveal" Size="Medium" />
                                    <controls:DaisyLoading Variant="GlitchReveal" Size="Large" Color="Success" />
                                    <controls:DaisyLoading Variant="GlitchReveal" Size="ExtraLarge" Color="Accent" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Spacing="10" Margin="0,0,40,12">
                                <TextBlock Text="CursorBlink (CLI cursor)" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                    <controls:DaisyLoading Variant="CursorBlink" Size="Medium" />
                                    <controls:DaisyLoading Variant="CursorBlink" Size="Large" Color="Success" />
                                    <controls:DaisyLoading Variant="CursorBlink" Size="ExtraLarge" Color="Warning" />
                                </StackPanel>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Progress (Linear) -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="progress" Title="Progress (Linear)" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="200">
                        <controls:DaisyProgress Value="40" />
                        <controls:DaisyProgress Value="70" Variant="Primary" />
                        <controls:DaisyProgress Value="100" Variant="Accent" Size="Small" />
                        <controls:DaisyProgress IsIndeterminate="True" Variant="Secondary" />
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Progress (Radial) -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="radial-progress" Title="Radial Progress" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <controls:DaisyRadialProgress Value="25" />
                            <controls:DaisyRadialProgress Value="50" Variant="Primary" Thickness="3" />
                            <controls:DaisyRadialProgress Value="75" Variant="Secondary" Size="Large" />
                        </StackPanel>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Skeleton -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="skeleton" Title="Skeleton" />
                <WrapPanel Orientation="Horizontal">
                    <!-- Basic Skeleton -->
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Basic Skeleton" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <controls:DaisySkeleton Width="128" Height="128" />
                    </StackPanel>

                    <!-- Circle with content -->
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="208">
                        <TextBlock Text="Circle with Content" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <controls:DaisySkeleton Width="64" Height="64" CornerRadius="32" />
                            <StackPanel Spacing="10" VerticalAlignment="Center">
                                <controls:DaisySkeleton Height="16" Width="80" />
                                <controls:DaisySkeleton Height="16" Width="112" />
                            </StackPanel>
                        </StackPanel>
                        <controls:DaisySkeleton Height="128" />
                    </StackPanel>

                    <!-- Rectangle with content -->
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="208">
                        <TextBlock Text="Rectangle with Content" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <controls:DaisySkeleton Height="128" />
                        <controls:DaisySkeleton Height="16" Width="112" />
                        <controls:DaisySkeleton Height="16" />
                        <controls:DaisySkeleton Height="16" />
                    </StackPanel>

                    <!-- Text mode skeleton -->
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Animated Text (skeleton-text)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <controls:DaisySkeleton IsTextMode="True" Content="AI is thinking harder..." FontSize="16"/>
                        <controls:DaisySkeleton IsTextMode="True" Content="Loading data..." FontSize="14" Opacity="0.8"/>
                        <controls:DaisySkeleton IsTextMode="True" Content="Please wait..." FontSize="12" Opacity="0.6"/>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Toast -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="toast" Title="Toast" />
                <TextBlock Text="Toast supports position customization via ToastHorizontalOffset and ToastVerticalOffset properties" Opacity="0.7" FontSize="13"/>
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Default Position (16px offset)" FontSize="12" Opacity="0.7"/>
                        <Border Background="{DynamicResource DaisyBase200Brush}" Width="300" Height="200" ClipToBounds="True" CornerRadius="8">
                            <Grid>
                                <TextBlock Text="Toast Demo" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                                <controls:DaisyToast x:Name="DemoToast" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                    <controls:DaisyAlert Content="Default offset" Variant="Info"/>
                                </controls:DaisyToast>
                            </Grid>
                        </Border>
                    </StackPanel>
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Custom Offset (32px)" FontSize="12" Opacity="0.7"/>
                        <Border Background="{DynamicResource DaisyBase200Brush}" Width="300" Height="200" ClipToBounds="True" CornerRadius="8">
                            <Grid>
                                <controls:DaisyToast HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                    ToastHorizontalOffset="32" ToastVerticalOffset="32">
                                    <controls:DaisyAlert Content="Larger offset" Variant="Success"/>
                                </controls:DaisyToast>
                            </Grid>
                        </Border>
                    </StackPanel>
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Top-Left Position" FontSize="12" Opacity="0.7"/>
                        <Border Background="{DynamicResource DaisyBase200Brush}" Width="300" Height="200" ClipToBounds="True" CornerRadius="8">
                            <Grid>
                                <controls:DaisyToast HorizontalAlignment="Left" VerticalAlignment="Top"
                                                    ToastHorizontalOffset="8" ToastVerticalOffset="8">
                                    <controls:DaisyAlert Content="Top-left toast" Variant="Warning"/>
                                </controls:DaisyToast>
                            </Grid>
                        </Border>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Tooltip -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="tooltip" Title="Tooltip" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <Button Content="Hover me (Default)" ToolTip.Tip="I am a tooltip" />
                        <Button Content="Hover me (Primary)">
                            <ToolTip.Tip>
                                <ToolTip Classes="primary" Content="Primary Tooltip" />
                            </ToolTip.Tip>
                        </Button>
                        <Button Content="Hover me (Secondary)">
                            <ToolTip.Tip>
                                <ToolTip Classes="secondary" Content="Secondary Tooltip" />
                            </ToolTip.Tip>
                        </Button>
                        <Button Content="Hover me (Accent)">
                            <ToolTip.Tip>
                                <ToolTip Classes="accent" Content="Accent Tooltip" />
                            </ToolTip.Tip>
                        </Button>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</UserControl>
