<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET"
    xmlns:custom="clr-namespace:Flowery.Controls.Custom;assembly=Flowery.NET"
    xmlns:services="clr-namespace:Flowery.Services;assembly=Flowery.NET"
    xmlns:local="clr-namespace:Flowery.NET.Gallery.Examples"
    xmlns:gallery="clr-namespace:Flowery.NET.Gallery"
    x:Class="Flowery.NET.Gallery.Examples.DataDisplayExamples"
    x:DataType="local:DataDisplayExamples">

    <Grid>
        <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled"
            services:FloweryResponsive.IsEnabled="True"
            services:FloweryResponsive.BaseMaxWidth="430">
            <StackPanel Spacing="24" Margin="24,0,24,32">

                <!-- Accordion -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="accordion" Title="Accordion" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="350">
                            <TextBlock Text="Only one item open at a time" FontSize="12"
                                Opacity="0.7" />
                            <controls:DaisyAccordion ExpandedIndex="0">
                                <controls:DaisyAccordionItem Header="How do I create an account?">
                                    <TextBlock
                                        Text="Click the Sign Up button and follow the registration process."
                                        TextWrapping="Wrap" />
                                </controls:DaisyAccordionItem>
                                <controls:DaisyAccordionItem Header="I forgot my password?">
                                    <TextBlock Text="Click Forgot Password on the login page."
                                        TextWrapping="Wrap" />
                                </controls:DaisyAccordionItem>
                                <controls:DaisyAccordionItem Header="How do I update my profile?">
                                    <TextBlock
                                        Text="Go to My Account settings and select Edit Profile."
                                        TextWrapping="Wrap" />
                                </controls:DaisyAccordionItem>
                            </controls:DaisyAccordion>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="350">
                            <TextBlock Text="Plus Variant" FontSize="12" Opacity="0.7" />
                            <controls:DaisyAccordion Variant="Plus" ExpandedIndex="0">
                                <controls:DaisyAccordionItem Header="Question 1">
                                    <TextBlock Text="Answer to question 1." />
                                </controls:DaisyAccordionItem>
                                <controls:DaisyAccordionItem Header="Question 2">
                                    <TextBlock Text="Answer to question 2." />
                                </controls:DaisyAccordionItem>
                            </controls:DaisyAccordion>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Animated Number -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="animatednumber" Title="Animated Number" />
                    <TextBlock Text="Animated numeric display (slide transition on value changes)."
                        Opacity="0.7" FontSize="13" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="240">
                            <TextBlock Text="Counter" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <controls:DaisyAnimatedNumber x:Name="AnimatedNumberDemo"
                                Value="42"
                                FontSize="32"
                                FontWeight="Bold"
                                Foreground="{DynamicResource DaisyPrimaryBrush}" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <controls:DaisyButton Content="-1" Click="OnAnimatedNumberDecrement" />
                                <controls:DaisyButton Content="+1" Variant="Primary" Click="OnAnimatedNumberIncrement" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="240">
                            <TextBlock Text="Price-like (MinDigits=2)" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                <TextBlock Text="$" FontSize="24" FontWeight="Bold" />
                                <controls:DaisyAnimatedNumber x:Name="AnimatedPriceDemo"
                                    Value="7"
                                    MinDigits="2"
                                    FontSize="24"
                                    FontWeight="Bold" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <controls:DaisyButton Content="-1" Click="OnAnimatedPriceDecrement" />
                                <controls:DaisyButton Content="+1" Variant="Primary" Click="OnAnimatedPriceIncrement" />
                            </StackPanel>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Avatar -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="avatar" Title="Avatar" />
                    <WrapPanel Orientation="Horizontal">
                        <!-- Sizes -->
                        <StackPanel Spacing="10" Margin="0,0,40,20"
                            controls:FlowerySizeManager.IgnoreGlobalSize="True">
                            <TextBlock Text="Sizes" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Spacing="10"
                                VerticalAlignment="Bottom">
                                <controls:DaisyAvatar Size="ExtraSmall" Background="#E8D5B7">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#5D4037" Width="16" Height="16" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Size="Small" Background="#E8D5B7">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#5D4037" Width="22" Height="22" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Size="Medium" Background="#E8D5B7">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#5D4037" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Size="Large" Background="#E8D5B7">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#5D4037" Width="64" Height="64" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Size="ExtraLarge" Background="#E8D5B7">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#5D4037" Width="86" Height="86" />
                                </controls:DaisyAvatar>
                            </StackPanel>
                        </StackPanel>

                        <!-- Shapes -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Shapes" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <controls:DaisyAvatar Shape="Circle" Background="#FFCC80">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#E65100" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Shape="Rounded" Background="#FFCC80">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#E65100" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Shape="Square" Background="#FFCC80">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#E65100" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                            </StackPanel>
                        </StackPanel>

                        <!-- Status -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Status (Online/Offline)" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <controls:DaisyAvatar Status="Online" Background="#BBDEFB">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#1565C0" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Status="Offline" Background="#BBDEFB">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#1565C0" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Status="None" Background="#BBDEFB">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#1565C0" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                            </StackPanel>
                        </StackPanel>

                        <!-- Ring -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="With Ring" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <controls:DaisyAvatar HasRing="True" RingColor="Primary"
                                    Background="#E1BEE7">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#7B1FA2" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar HasRing="True" RingColor="Secondary"
                                    Background="#E1BEE7">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#7B1FA2" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar HasRing="True" RingColor="Success"
                                    Background="#E1BEE7">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#7B1FA2" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar HasRing="True" RingColor="Error"
                                    Background="#E1BEE7">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#7B1FA2" Width="32" Height="32" />
                                </controls:DaisyAvatar>
                            </StackPanel>
                        </StackPanel>

                        <!-- Placeholder -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Placeholder" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <controls:DaisyAvatar IsPlaceholder="True" Size="Large">
                                    <TextBlock Text="D" FontSize="24" FontWeight="Bold"
                                        VerticalAlignment="Center" HorizontalAlignment="Center" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar IsPlaceholder="True">
                                    <TextBlock Text="AI" FontSize="14" FontWeight="Bold"
                                        VerticalAlignment="Center" HorizontalAlignment="Center" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar IsPlaceholder="True" Size="Small">
                                    <TextBlock Text="UI" FontSize="10" FontWeight="Bold"
                                        VerticalAlignment="Center" HorizontalAlignment="Center" />
                                </controls:DaisyAvatar>
                            </StackPanel>
                        </StackPanel>

                        <!-- Avatar Group -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Avatar Group" FontWeight="Bold" />
                            <controls:DaisyAvatarGroup Overlap="16">
                                <controls:DaisyAvatar Size="Small" Background="#FFCDD2" BorderThickness="2" BorderBrush="{DynamicResource DaisyBase100Brush}">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#C62828" Width="22" Height="22" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Size="Small" Background="#C8E6C9" BorderThickness="2" BorderBrush="{DynamicResource DaisyBase100Brush}">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#2E7D32" Width="22" Height="22" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Size="Small" Background="#BBDEFB" BorderThickness="2" BorderBrush="{DynamicResource DaisyBase100Brush}">
                                    <PathIcon Data="{DynamicResource DaisyIconDog}"
                                        Foreground="#1565C0" Width="22" Height="22" />
                                </controls:DaisyAvatar>
                                <controls:DaisyAvatar Size="Small" IsPlaceholder="True" BorderThickness="2" BorderBrush="{DynamicResource DaisyBase100Brush}">
                                    <TextBlock Text="+5" FontWeight="Bold"
                                        VerticalAlignment="Center" HorizontalAlignment="Center" />
                                </controls:DaisyAvatar>
                            </controls:DaisyAvatarGroup>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Badge -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="badge" Title="Badge" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="400">
                            <WrapPanel>
                                <controls:DaisyBadge Content="Default" Margin="4" />
                                <controls:DaisyBadge Content="Neutral" Variant="Neutral" Margin="4" />
                                <controls:DaisyBadge Content="Primary" Variant="Primary" Margin="4" />
                                <controls:DaisyBadge Content="Secondary" Variant="Secondary"
                                    Margin="4" />
                                <controls:DaisyBadge Content="Accent" Variant="Accent" Margin="4" />
                                <controls:DaisyBadge Content="Ghost" Variant="Ghost" Margin="4" />
                                <controls:DaisyBadge Content="Outline" Variant="Primary"
                                    IsOutline="True" Margin="4" />
                                <controls:DaisyBadge Content="Tiny" Size="ExtraSmall" Variant="Info"
                                    Margin="4" />
                            </WrapPanel>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Carousel -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="carousel" Title="Carousel" />
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyCarousel Height="150" HorizontalAlignment="Stretch"
                            MaxWidth="{Binding (services:FloweryResponsive.ResponsiveMaxWidth), ElementName=MainScrollViewer}">
                            <Border Background="#FF5F56" CornerRadius="8">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                        <PathIcon Data="{StaticResource DaisyIconSun}" Foreground="White" Width="24" Height="24"/>
                                        <TextBlock Text="Slide 1" FontSize="24" FontWeight="Bold"
                                            Foreground="White" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="Morning Breeze" FontSize="14" Foreground="White"
                                        Opacity="0.9" HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                            <Border Background="#FFBD2E" CornerRadius="8">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                        <PathIcon Data="{StaticResource DaisyIconStar}" Foreground="White" Width="24" Height="24"/>
                                        <TextBlock Text="Slide 2" FontSize="24" FontWeight="Bold"
                                            Foreground="White" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="Golden Star" FontSize="14" Foreground="White"
                                        Opacity="0.9" HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                            <Border Background="#27C93F" CornerRadius="8">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                        <PathIcon Data="{StaticResource DaisyIconHeart}" Foreground="White" Width="24" Height="24"/>
                                        <TextBlock Text="Slide 3" FontSize="24" FontWeight="Bold"
                                            Foreground="White" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="Warm Heart" FontSize="14"
                                        Foreground="White" Opacity="0.9"
                                        HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                            <Border Background="#007BFF" CornerRadius="8">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                        <PathIcon Data="{StaticResource DaisyIconMoon}" Foreground="White" Width="24" Height="24"/>
                                        <TextBlock Text="Slide 4" FontSize="24" FontWeight="Bold"
                                            Foreground="White" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="Night Sky" FontSize="14"
                                        Foreground="White" Opacity="0.9"
                                        HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </controls:DaisyCarousel>
                    </StackPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Chat Bubble -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="chat-bubble" Title="Chat Bubble" />

                    <WrapPanel Orientation="Horizontal">
                        <!-- Basic chat-start and chat-end -->
                        <controls:DaisyCard Margin="0,0,20,20"
                            MaxWidth="{Binding (services:FloweryResponsive.ResponsiveMaxWidth), ElementName=MainScrollViewer}">
                            <StackPanel Spacing="8" Margin="16">
                                <TextBlock Text="Basic positioning (start/end)"
                                    FontWeight="SemiBold" FontSize="16" />
                                <StackPanel Spacing="4">
                                    <controls:DaisyChatBubble
                                        Content="It's over Anakin, I have the high ground." />
                                    <controls:DaisyChatBubble IsEnd="True"
                                        Content="You underestimate my power!" />
                                </StackPanel>
                            </StackPanel>
                        </controls:DaisyCard>

                        <!-- Chat with header and footer -->
                        <controls:DaisyCard Margin="0,0,20,20"
                            MaxWidth="{Binding (services:FloweryResponsive.ResponsiveMaxWidth), ElementName=MainScrollViewer}">
                            <StackPanel Spacing="8" Margin="16">
                                <TextBlock Text="With header and footer" FontWeight="SemiBold"
                                    FontSize="16" />
                                <StackPanel Spacing="4">
                                    <controls:DaisyChatBubble Header="Obi-Wan Kenobi"
                                        Content="You were the Chosen One!" Footer="Delivered" />
                                    <controls:DaisyChatBubble Header="Obi-Wan Kenobi"
                                        Content="I loved you." Footer="Seen" />
                                    <controls:DaisyChatBubble IsEnd="True" Header="Anakin"
                                        Content="I hate you!" Footer="Seen at 12:46" />
                                </StackPanel>
                            </StackPanel>
                        </controls:DaisyCard>

                        <!-- Chat Bubble with colors -->
                        <controls:DaisyCard Margin="0,0,20,20"
                            MaxWidth="{Binding (services:FloweryResponsive.ResponsiveMaxWidth), ElementName=MainScrollViewer}">
                            <StackPanel Spacing="8" Margin="16">
                                <TextBlock Text="Color variants" FontWeight="SemiBold" FontSize="16" />
                                <StackPanel Spacing="4">
                                    <controls:DaisyChatBubble
                                        Content="What kind of nonsense is this" Variant="Primary" />
                                    <controls:DaisyChatBubble
                                        Content="Put me on the Council and not make me a Master!??"
                                        Variant="Secondary" />
                                    <controls:DaisyChatBubble
                                        Content="That's never been done in the history of the Jedi."
                                        Variant="Accent" />
                                    <controls:DaisyChatBubble Content="It's insulting!"
                                        Variant="Neutral" />
                                    <controls:DaisyChatBubble IsEnd="True"
                                        Content="Calm down, Anakin." Variant="Info" />
                                    <controls:DaisyChatBubble IsEnd="True"
                                        Content="You have been given a great honor."
                                        Variant="Success" />
                                    <controls:DaisyChatBubble IsEnd="True"
                                        Content="To be on the Council at your age."
                                        Variant="Warning" />
                                    <controls:DaisyChatBubble IsEnd="True"
                                        Content="It's never happened before." Variant="Error" />
                                </StackPanel>
                            </StackPanel>
                        </controls:DaisyCard>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Collapse -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="collapse" Title="Collapse" />
                    <StackPanel Spacing="10" Margin="0,0,40,20" HorizontalAlignment="Left"
                        MaxWidth="{Binding (services:FloweryResponsive.ResponsiveMaxWidth), ElementName=MainScrollViewer}">
                        <controls:DaisyCollapse Header="Focus me to see content">
                            <TextBlock Text="Here is the hidden content." Padding="10" />
                        </controls:DaisyCollapse>
                        <controls:DaisyCollapse Variant="Plus" Header="Plus Variant">
                            <TextBlock Text="More content." Padding="10" />
                        </controls:DaisyCollapse>
                    </StackPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Contribution Graph -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="contributiongraph" Title="Contribution Graph" />
                    <TextBlock Text="GitHub-style heatmap of daily activity."
                        Opacity="0.7" FontSize="13" />
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyToggle x:Name="MonthStartBorderToggle"
                            Content="Highlight month starts"
                            IsChecked="True"
                            Margin="0,0,0,6"
                            ToolTip.Tip="Adds a secondary-colored border to cells on the 1st of each month." />
                        <controls:DaisyContributionGraph Width="720"
                            Year="2025"
                            x:Name="ContributionGraph"
                            HighlightMonthStartBorders="{Binding IsChecked, ElementName=MonthStartBorderToggle}"
                            Contributions="{Binding ContributionGraphDays}" />
                    </StackPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Countdown -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="countdown" Title="Countdown" />
                    <WrapPanel Orientation="Horizontal">
                        <!-- Current time display -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Current Time" Classes="text-sm opacity-70"
                                Margin="0,0,0,4" />
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <controls:DaisyCountdown ClockUnit="Hours" Digits="2" />
                                <TextBlock Text=":" VerticalAlignment="Center" FontSize="24"
                                    FontFamily="Cascadia Mono, Consolas, monospace" />
                                <controls:DaisyCountdown ClockUnit="Minutes" Digits="2" />
                                <TextBlock Text=":" VerticalAlignment="Center" FontSize="24"
                                    FontFamily="Cascadia Mono, Consolas, monospace" />
                                <controls:DaisyCountdown ClockUnit="Seconds" Digits="2" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Live countdown -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Live Countdown (loops)" Classes="text-sm opacity-70"
                                Margin="0,0,0,4" />
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <controls:DaisyCountdown Value="59" Digits="2" IsCountingDown="True"
                                    Loop="True" LoopFrom="59" FontSize="48" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Large countdown with labels -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="With Labels" Classes="text-sm opacity-70"
                                Margin="0,0,0,4" />
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <StackPanel HorizontalAlignment="Center">
                                    <controls:DaisyCountdown Value="15" FontSize="32" />
                                    <TextBlock Text="days" HorizontalAlignment="Center"
                                        Classes="text-sm" />
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center">
                                    <controls:DaisyCountdown Value="10" FontSize="32" />
                                    <TextBlock Text="hours" HorizontalAlignment="Center"
                                        Classes="text-sm" />
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center">
                                    <controls:DaisyCountdown Value="24" FontSize="32" />
                                    <TextBlock Text="min" HorizontalAlignment="Center"
                                        Classes="text-sm" />
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center">
                                    <controls:DaisyCountdown Value="30" FontSize="32"
                                        IsCountingDown="True" Loop="True" LoopFrom="59" />
                                    <TextBlock Text="sec" HorizontalAlignment="Center"
                                        Classes="text-sm" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Diff -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="diff" Title="Diff (Image Compare)" />
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyDiff Height="180" HorizontalAlignment="Stretch"
                            MaxWidth="{Binding (services:FloweryResponsive.ResponsiveMaxWidth), ElementName=MainScrollViewer}">
                            <controls:DaisyDiff.Image1>
                                <Border Background="Red">
                                    <TextBlock Text="BEFORE" Foreground="White"
                                        FontWeight="Bold" HorizontalAlignment="Center"
                                        VerticalAlignment="Center" FontSize="30" />
                                </Border>
                            </controls:DaisyDiff.Image1>
                            <controls:DaisyDiff.Image2>
                                <Border Background="Blue">
                                    <TextBlock Text="AFTER" Foreground="White" FontWeight="Bold"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                        FontSize="30" />
                                </Border>
                            </controls:DaisyDiff.Image2>
                        </controls:DaisyDiff>
                    </StackPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Hover Gallery -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="hover-gallery" Title="Hover Gallery" />
                    <TextBlock Text="Move mouse horizontally to reveal images" FontSize="12"
                        Foreground="{DynamicResource DaisyBaseContentBrush}" Opacity="0.6" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="8" Margin="0,0,40,20">
                            <TextBlock Text="Standalone" FontSize="12"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" Opacity="0.6" />
                            <controls:DaisyHoverGallery Height="160" Width="200" CornerRadius="12">
                                <Border CornerRadius="12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="#667eea" Offset="0" />
                                            <GradientStop Color="#764ba2" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center" Spacing="8">
                                        <PathIcon Width="48" Height="48" Foreground="White"
                                            Data="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
