<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET"
             xmlns:custom="clr-namespace:Flowery.Controls.Custom;assembly=Flowery.NET"
             xmlns:local="clr-namespace:Flowery.NET.Gallery.Examples"
             x:Class="Flowery.NET.Gallery.Examples.DataDisplayExamples">

    <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- Accordion -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="accordion" Title="Accordion" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="350">
                        <TextBlock Text="Only one item open at a time" FontSize="12" Opacity="0.7"/>
                        <controls:DaisyAccordion ExpandedIndex="0">
                            <controls:DaisyAccordionItem Header="How do I create an account?">
                                <TextBlock Text="Click the Sign Up button and follow the registration process." TextWrapping="Wrap" />
                            </controls:DaisyAccordionItem>
                            <controls:DaisyAccordionItem Header="I forgot my password?">
                                <TextBlock Text="Click Forgot Password on the login page." TextWrapping="Wrap" />
                            </controls:DaisyAccordionItem>
                            <controls:DaisyAccordionItem Header="How do I update my profile?">
                                <TextBlock Text="Go to My Account settings and select Edit Profile." TextWrapping="Wrap" />
                            </controls:DaisyAccordionItem>
                        </controls:DaisyAccordion>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="350">
                        <TextBlock Text="Plus Variant" FontSize="12" Opacity="0.7"/>
                        <controls:DaisyAccordion Variant="Plus" ExpandedIndex="0">
                            <controls:DaisyAccordionItem Header="Question 1">
                                <TextBlock Text="Answer to question 1." />
                            </controls:DaisyAccordionItem>
                            <controls:DaisyAccordionItem Header="Question 2">
                                <TextBlock Text="Answer to question 2." />
                            </controls:DaisyAccordionItem>
                        </controls:DaisyAccordion>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Avatar -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="avatar" Title="Avatar" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <controls:DaisyAvatar Status="Online">
                                <Border Background="Gray" />
                            </controls:DaisyAvatar>
                            <controls:DaisyAvatar IsRounded="False" Status="Offline">
                                <Border Background="Gray" />
                            </controls:DaisyAvatar>
                            <controls:DaisyAvatar Size="ExtraSmall">
                                <Border Background="Gray" />
                            </controls:DaisyAvatar>
                        </StackPanel>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Badge -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="badge" Title="Badge" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="400">
                        <WrapPanel>
                            <controls:DaisyBadge Content="Default" Margin="4"/>
                            <controls:DaisyBadge Content="Neutral" Variant="Neutral" Margin="4"/>
                            <controls:DaisyBadge Content="Primary" Variant="Primary" Margin="4"/>
                            <controls:DaisyBadge Content="Secondary" Variant="Secondary" Margin="4"/>
                            <controls:DaisyBadge Content="Accent" Variant="Accent" Margin="4"/>
                            <controls:DaisyBadge Content="Ghost" Variant="Ghost" Margin="4"/>
                            <controls:DaisyBadge Content="Outline" Variant="Primary" IsOutline="True" Margin="4"/>
                            <controls:DaisyBadge Content="Tiny" Size="ExtraSmall" Variant="Info" Margin="4"/>
                        </WrapPanel>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Carousel -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="carousel" Title="Carousel" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyCarousel Height="150" Width="450">
                            <Border Background="#FF5F56" Width="200" />
                            <Border Background="#FFBD2E" Width="200" />
                            <Border Background="#27C93F" Width="200" />
                            <Border Background="#007BFF" Width="200" />
                        </controls:DaisyCarousel>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Chat Bubble -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="chat-bubble" Title="Chat Bubble" />

                <WrapPanel Orientation="Horizontal">
                    <!-- Basic chat-start and chat-end -->
                    <controls:DaisyCard Margin="0,0,20,20">
                        <StackPanel Spacing="8" Width="400" Margin="16">
                            <TextBlock Text="Basic positioning (start/end)" FontWeight="SemiBold" FontSize="16" />
                            <StackPanel Spacing="4">
                                <controls:DaisyChatBubble Content="It's over Anakin, I have the high ground." />
                                <controls:DaisyChatBubble IsEnd="True" Content="You underestimate my power!" />
                            </StackPanel>
                        </StackPanel>
                    </controls:DaisyCard>

                    <!-- Chat with header and footer -->
                    <controls:DaisyCard Margin="0,0,20,20">
                        <StackPanel Spacing="8" Width="400" Margin="16">
                            <TextBlock Text="With header and footer" FontWeight="SemiBold" FontSize="16" />
                            <StackPanel Spacing="4">
                                <controls:DaisyChatBubble Header="Obi-Wan Kenobi" Content="You were the Chosen One!" Footer="Delivered" />
                                <controls:DaisyChatBubble Header="Obi-Wan Kenobi" Content="I loved you." Footer="Seen" />
                                <controls:DaisyChatBubble IsEnd="True" Header="Anakin" Content="I hate you!" Footer="Seen at 12:46" />
                            </StackPanel>
                        </StackPanel>
                    </controls:DaisyCard>

                    <!-- Chat Bubble with colors -->
                    <controls:DaisyCard Margin="0,0,20,20">
                        <StackPanel Spacing="8" Width="400" Margin="16">
                            <TextBlock Text="Color variants" FontWeight="SemiBold" FontSize="16" />
                            <StackPanel Spacing="4">
                                <controls:DaisyChatBubble Content="What kind of nonsense is this" Variant="Primary" />
                                <controls:DaisyChatBubble Content="Put me on the Council and not make me a Master!??" Variant="Secondary" />
                                <controls:DaisyChatBubble Content="That's never been done in the history of the Jedi." Variant="Accent" />
                                <controls:DaisyChatBubble Content="It's insulting!" Variant="Neutral" />
                                <controls:DaisyChatBubble IsEnd="True" Content="Calm down, Anakin." Variant="Info" />
                                <controls:DaisyChatBubble IsEnd="True" Content="You have been given a great honor." Variant="Success" />
                                <controls:DaisyChatBubble IsEnd="True" Content="To be on the Council at your age." Variant="Warning" />
                                <controls:DaisyChatBubble IsEnd="True" Content="It's never happened before." Variant="Error" />
                            </StackPanel>
                        </StackPanel>
                    </controls:DaisyCard>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Collapse -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="collapse" Title="Collapse" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <controls:DaisyCollapse Header="Focus me to see content">
                            <TextBlock Text="Here is the hidden content." Padding="10"/>
                        </controls:DaisyCollapse>
                        <controls:DaisyCollapse Variant="Plus" Header="Plus Variant">
                            <TextBlock Text="More content." Padding="10"/>
                        </controls:DaisyCollapse>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Countdown -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="countdown" Title="Countdown" />
                <WrapPanel Orientation="Horizontal">
                    <!-- Current time display -->
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Current Time" Classes="text-sm opacity-70" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <controls:DaisyCountdown ClockUnit="Hours" Digits="2" />
                            <TextBlock Text=":" VerticalAlignment="Center" FontSize="24" FontFamily="Cascadia Mono, Consolas, monospace"/>
                            <controls:DaisyCountdown ClockUnit="Minutes" Digits="2" />
                            <TextBlock Text=":" VerticalAlignment="Center" FontSize="24" FontFamily="Cascadia Mono, Consolas, monospace"/>
                            <controls:DaisyCountdown ClockUnit="Seconds" Digits="2" />
                        </StackPanel>
                    </StackPanel>
                    <!-- Live countdown -->
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Live Countdown (loops)" Classes="text-sm opacity-70" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <controls:DaisyCountdown Value="59" Digits="2" IsCountingDown="True" Loop="True" LoopFrom="59" FontSize="48" />
                        </StackPanel>
                    </StackPanel>
                    <!-- Large countdown with labels -->
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="With Labels" Classes="text-sm opacity-70" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <StackPanel HorizontalAlignment="Center">
                                <controls:DaisyCountdown Value="15" FontSize="32" />
                                <TextBlock Text="days" HorizontalAlignment="Center" Classes="text-sm"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center">
                                <controls:DaisyCountdown Value="10" FontSize="32" />
                                <TextBlock Text="hours" HorizontalAlignment="Center" Classes="text-sm"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center">
                                <controls:DaisyCountdown Value="24" FontSize="32" />
                                <TextBlock Text="min" HorizontalAlignment="Center" Classes="text-sm"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center">
                                <controls:DaisyCountdown Value="30" FontSize="32" IsCountingDown="True" Loop="True" LoopFrom="59" />
                                <TextBlock Text="sec" HorizontalAlignment="Center" Classes="text-sm"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Diff -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="diff" Title="Diff (Image Compare)" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyDiff Width="450" Height="180">
                            <controls:DaisyDiff.Image1>
                                <Border Background="Red">
                                    <TextBlock Text="BEFORE" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                                </Border>
                            </controls:DaisyDiff.Image1>
                            <controls:DaisyDiff.Image2>
                                <Border Background="Blue">
                                    <TextBlock Text="AFTER" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                                </Border>
                            </controls:DaisyDiff.Image2>
                        </controls:DaisyDiff>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Hover Gallery -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="hover-gallery" Title="Hover Gallery" />
                <TextBlock Text="Move mouse horizontally to reveal images" FontSize="12" Foreground="{DynamicResource DaisyBaseContentBrush}" Opacity="0.6"/>
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="8" Margin="0,0,40,20">
                        <TextBlock Text="Standalone" FontSize="12" Foreground="{DynamicResource DaisyBaseContentBrush}" Opacity="0.6"/>
                        <controls:DaisyHoverGallery Height="160" Width="200" CornerRadius="12">
                            <Border CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                        <GradientStop Color="#667eea" Offset="0"/>
                                        <GradientStop Color="#764ba2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                                    <PathIcon Width="48" Height="48" Foreground="White"
                                              Data="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"/>
                                    <TextBlock Text="Front View" Foreground="White" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                            <Border CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                        <GradientStop Color="#f093fb" Offset="0"/>
                                        <GradientStop Color="#f5576c" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                                    <PathIcon Width="48" Height="48" Foreground="White"
                                              Data="M6.827 6.175A2.31 2.31 0 015.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 00-1.134-.175 2.31 2.31 0 01-1.64-1.055l-.822-1.316a2.192 2.192 0 00-1.736-1.039 48.774 48.774 0 00-5.232 0 2.192 2.192 0 00-1.736 1.039l-.821 1.316z M12 12.75a3 3 0 100 6 3 3 0 000-6z"/>
                                    <TextBlock Text="Side View" Foreground="White" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                            <Border CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                        <GradientStop Color="#4facfe" Offset="0"/>
                                        <GradientStop Color="#00f2fe" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                                    <PathIcon Width="48" Height="48" Foreground="White"
                                              Data="M21 7.5l-2.25-1.313M21 7.5v2.25m0-2.25l-2.25 1.313M3 7.5l2.25-1.313M3 7.5l2.25 1.313M3 7.5v2.25m9 3l2.25-1.313M12 12.75l-2.25-1.313M12 12.75V15m0 6.75l2.25-1.313M12 21.75V19.5m0 2.25l-2.25-1.313m0-16.875L12 2.25l2.25 1.313M21 14.25v2.25l-2.25 1.313m-13.5 0L3 16.5v-2.25"/>
                                    <TextBlock Text="Back View" Foreground="White" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                            <Border CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                        <GradientStop Color="#43e97b" Offset="0"/>
                                        <GradientStop Color="#38f9d7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                                    <PathIcon Width="48" Height="48" Foreground="White"
                                              Data="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607zM10.5 7.5v6m3-3h-6"/>
                                    <TextBlock Text="Detail" Foreground="White" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </controls:DaisyHoverGallery>
                    </StackPanel>

                    <StackPanel Spacing="8" Margin="0,0,40,20">
                        <TextBlock Text="Within a Card" FontSize="12" Foreground="{DynamicResource DaisyBaseContentBrush}" Opacity="0.6"/>
                        <controls:DaisyCard CornerRadius="16" Width="220">
                            <StackPanel>
                                <controls:DaisyHoverGallery Height="160" CornerRadius="12,12,0,0">
                                    <Border CornerRadius="12,12,0,0" Background="#1a1a2e">
                                        <Grid>
                                            <PathIcon Width="80" Height="80" Foreground="#eab308"
                                                      Data="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z"/>
                                            <Border Background="#eab308" CornerRadius="4" Padding="6,3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8">
                                                <TextBlock Text="NEW" FontSize="10" FontWeight="Bold" Foreground="#1a1a2e"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <Border CornerRadius="12,12,0,0" Background="#16213e">
                                        <PathIcon Width="80" Height="80" Foreground="#60a5fa"
                                                  Data="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25"/>
                                    </Border>
                                    <Border CornerRadius="12,12,0,0" Background="#0f3460">
                                        <PathIcon Width="80" Height="80" Foreground="#34d399"
                                                  Data="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3"/>
                                    </Border>
                                </controls:DaisyHoverGallery>
                                <StackPanel Margin="12">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="Tech Bundle" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Grid.Column="1" Text=" $299" FontWeight="SemiBold" Foreground="{DynamicResource DaisySecondaryBrush}"/>
                                    </Grid>
                                    <TextBlock Text="Laptop, monitor &amp; phone combo pack" FontSize="12" Foreground="{DynamicResource DaisyBaseContentBrush}" Opacity="0.6" Margin="0,4,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Kbd -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="kbd" Title="Kbd" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Basic" FontSize="12" Opacity="0.7"/>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <controls:DaisyKbd Content="Ctrl" />
                            <controls:DaisyKbd Content="Shift" />
                            <controls:DaisyKbd Content="Del" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Sizes" FontSize="12" Opacity="0.7"/>
                        <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                            <controls:DaisyKbd Size="ExtraSmall" Content="XS" />
                            <controls:DaisyKbd Size="Small" Content="SM" />
                            <controls:DaisyKbd Size="Medium" Content="MD" />
                            <controls:DaisyKbd Size="Large" Content="LG" />
                            <controls:DaisyKbd Size="ExtraLarge" Content="XL" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <TextBlock Text="Keyboard Shortcut" FontSize="12" Opacity="0.7"/>
                        <StackPanel Orientation="Horizontal" Spacing="2" VerticalAlignment="Center">
                            <controls:DaisyKbd Size="Small" Content="âŒ˜" />
                            <TextBlock Text="+" VerticalAlignment="Center" Margin="2,0"/>
                            <controls:DaisyKbd Size="Small" Content="Shift" />
                            <TextBlock Text="+" VerticalAlignment="Center" Margin="2,0"/>
                            <controls:DaisyKbd Size="Small" Content="P" />
                        </StackPanel>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Stat -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="stat" Title="Stat" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="16" Margin="0,0,40,20">
                        <controls:DaisyStats>
                            <controls:DaisyStat Title="Total Page Views" Value="89,400" Description="21% more than last month" />
                            <controls:DaisyStat Title="Downloads" Value="31K" Description="Jan 1st - Feb 1st" />
                            <controls:DaisyStat Title="New Users" Value="4,200" Description="â†—ï¸Ž 400 (22%)" />
                        </controls:DaisyStats>

                        <controls:DaisyStats>
                            <controls:DaisyStat Title="Total Likes" Value="25.6K" Description="21% more than last month" Variant="Primary" />
                            <controls:DaisyStat Title="Page Views" Value="2.6M" Description="21% more than last month" Variant="Secondary" />
                            <controls:DaisyStat Title="Tasks done" Value="86%" Description="31 tasks remaining" Variant="Accent" />
                        </controls:DaisyStats>

                        <controls:DaisyStats>
                            <controls:DaisyStat Title="Downloads" Value="31K" Description="Jan 1st - Feb 1st">
                                <controls:DaisyStat.Figure>
                                    <PathIcon Data="{StaticResource ArrowDownloadRegular}" Width="28" Height="28" Foreground="{DynamicResource DaisySecondaryBrush}" />
                                </controls:DaisyStat.Figure>
                            </controls:DaisyStat>
                            <controls:DaisyStat Title="New Users" Value="4,200" Description="â†—ï¸Ž 400 (22%)">
                                <controls:DaisyStat.Figure>
                                    <PathIcon Data="{StaticResource PersonRegular}" Width="28" Height="28" Foreground="{DynamicResource DaisySecondaryBrush}" />
                                </controls:DaisyStat.Figure>
                            </controls:DaisyStat>
                        </controls:DaisyStats>

                        <controls:DaisyStats>
                            <controls:DaisyStat Title="Downloads" Value="31K" Description="From January 1st to February 1st" IsCentered="True" />
                            <controls:DaisyStat Title="Users" Value="4,200" Description="â†—ï¸Ž 40 (2%)" Variant="Secondary" IsCentered="True" />
                            <controls:DaisyStat Title="New Registers" Value="1,200" Description="â†˜ï¸Ž 90 (14%)" IsCentered="True" />
                        </controls:DaisyStats>

                        <controls:DaisyStats Orientation="Vertical" HorizontalAlignment="Left">
                            <controls:DaisyStat Title="Downloads" Value="31K" Description="Jan 1st - Feb 1st" />
                            <controls:DaisyStat Title="New Users" Value="4,200" Description="â†—ï¸Ž 400 (22%)" />
                            <controls:DaisyStat Title="New Registers" Value="1,200" Description="â†˜ï¸Ž 90 (14%)" />
                        </controls:DaisyStats>

                        <controls:DaisyStats>
                            <controls:DaisyStat Title="Account balance" Value="$89,400">
                                <controls:DaisyStat.Actions>
                                    <controls:DaisyButton Size="ExtraSmall" Variant="Success" Content="Add funds" />
                                </controls:DaisyStat.Actions>
                            </controls:DaisyStat>
                            <controls:DaisyStat Title="Current balance" Value="$89,400">
                                <controls:DaisyStat.Actions>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <controls:DaisyButton Size="ExtraSmall" Content="Withdrawal" />
                                        <controls:DaisyButton Size="ExtraSmall" Content="Deposit" />
                                    </StackPanel>
                                </controls:DaisyStat.Actions>
                            </controls:DaisyStat>
                        </controls:DaisyStats>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Table -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="table" Title="Table" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="450">
                        <controls:DaisyTable>
                            <Grid ColumnDefinitions="1*, 2*, 1*">
                                <TextBlock Text="ID" FontWeight="Bold"/>
                                <TextBlock Text="Name" FontWeight="Bold" Grid.Column="1"/>
                                <TextBlock Text="Job" FontWeight="Bold" Grid.Column="2"/>
                            </Grid>
                            <Grid ColumnDefinitions="1*, 2*, 1*">
                                <TextBlock Text="1" />
