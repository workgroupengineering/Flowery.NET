                <controls:DaisyDivider />

                <!-- Tabs -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="tabs" Title="Tabs" />
                    <TextBlock Text="Tabs are used to show different content in a tabbed interface"
                        Opacity="0.7" FontSize="13" />

                    <!-- Photo tab recipe (inspired by SmoothUI Phototab) -->
                    <TextBlock Text="Photo tab recipe" FontWeight="SemiBold" Margin="0,16,0,0" />
                    <TextBlock Text="A photo card with an overlay action bar. Click an icon to swap the photo."
                        Opacity="0.7" FontSize="13" />

                    <Border x:Name="PhotoTabCard"
                            Width="260"
                            Height="260"
                            CornerRadius="16"
                            ClipToBounds="True"
                            HorizontalAlignment="Left"
                            PointerEntered="OnPhotoTabCardPointerEntered"
                            PointerExited="OnPhotoTabCardPointerExited">
                        <Grid>
                            <Image x:Name="PhotoTabImage0"
                                   Source="avares://Flowery.NET.Gallery/Assets/tile_blue.jpg"
                                   Stretch="UniformToFill"
                                   Opacity="1">
                                <Image.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.25" />
                                    </Transitions>
                                </Image.Transitions>
                            </Image>
                            <Image x:Name="PhotoTabImage1"
                                   Source="avares://Flowery.NET.Gallery/Assets/tile_purple.jpg"
                                   Stretch="UniformToFill"
                                   Opacity="0">
                                <Image.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.25" />
                                    </Transitions>
                                </Image.Transitions>
                            </Image>
                            <Image x:Name="PhotoTabImage2"
                                   Source="avares://Flowery.NET.Gallery/Assets/tile_yellow.jpg"
                                   Stretch="UniformToFill"
                                   Opacity="0">
                                <Image.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.25" />
                                    </Transitions>
                                </Image.Transitions>
                            </Image>

                            <!-- Overlay bar -->
                            <Border x:Name="PhotoTabBar"
                                    Width="168"
                                    Height="44"
                                    CornerRadius="22"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,0,12"
                                    Opacity="0.85">
                                <Border.Background>
                                    <SolidColorBrush Color="{DynamicResource DaisyPrimaryColor}" Opacity="0.4" />
                                </Border.Background>
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="{DynamicResource DaisyBaseContentColor}" Opacity="0.25" />
                                </Border.BorderBrush>
                                <Border.BorderThickness>1</Border.BorderThickness>
                                <Border.RenderTransform>
                                    <TranslateTransform Y="8" />
                                </Border.RenderTransform>
                                <Border.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.28" />
                                    </Transitions>
                                </Border.Transitions>

                                <Grid>
                                    <!-- hover highlight (moves under icons) -->
                                    <Canvas Margin="6">
                                        <Border x:Name="PhotoTabHoverIndicator"
                                                Width="32"
                                                Height="32"
                                                CornerRadius="16"
                                                Opacity="0">
                                            <Border.Background>
                                                <SolidColorBrush Color="{DynamicResource DaisyPrimaryColor}" Opacity="1" />
                                            </Border.Background>
                                            <Border.RenderTransform>
                                                <TranslateTransform X="0" Y="0" />
                                            </Border.RenderTransform>
                                            <Border.Transitions>
                                                <Transitions>
                                                    <DoubleTransition Property="Opacity" Duration="0:0:0.12" />
                                                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.28" />
                                                </Transitions>
                                            </Border.Transitions>
                                        </Border>
                                    </Canvas>

                                    <Grid Margin="6"
                                          ColumnDefinitions="Auto,Auto,Auto"
                                          ColumnSpacing="8">
                                        <controls:DaisyButton x:Name="PhotoTabAction0"
                                                             Grid.Column="0"
                                                             Width="32"
                                                             Height="32"
                                                             Padding="0"
                                                             Shape="Circle"
                                                             Variant="Ghost"
                                                             Click="OnPhotoTabActionClick"
                                                             GotFocus="OnPhotoTabActionGotFocus"
                                                             LostFocus="OnPhotoTabActionLostFocus"
                                                             PointerEntered="OnPhotoTabActionPointerEntered"
                                                             PointerExited="OnPhotoTabActionPointerExited"
                                                             Tag="0">
                                            <PathIcon Width="16"
                                                      Height="16"
                                                      Data="{StaticResource DaisyIconUser}" />
                                        </controls:DaisyButton>

                                        <controls:DaisyButton x:Name="PhotoTabAction1"
                                                             Grid.Column="1"
                                                             Width="32"
                                                             Height="32"
                                                             Padding="0"
                                                             Shape="Circle"
                                                             Variant="Ghost"
                                                             Click="OnPhotoTabActionClick"
                                                             GotFocus="OnPhotoTabActionGotFocus"
                                                             LostFocus="OnPhotoTabActionLostFocus"
                                                             PointerEntered="OnPhotoTabActionPointerEntered"
                                                             PointerExited="OnPhotoTabActionPointerExited"
                                                             Tag="1">
                                            <PathIcon Width="16"
                                                      Height="16"
                                                      Data="{StaticResource DaisyIconDog}" />
                                        </controls:DaisyButton>

                                        <controls:DaisyButton x:Name="PhotoTabAction2"
                                                             Grid.Column="2"
                                                             Width="32"
                                                             Height="32"
                                                             Padding="0"
                                                             Shape="Circle"
                                                             Variant="Ghost"
                                                             Click="OnPhotoTabActionClick"
                                                             GotFocus="OnPhotoTabActionGotFocus"
                                                             LostFocus="OnPhotoTabActionLostFocus"
                                                             PointerEntered="OnPhotoTabActionPointerEntered"
                                                             PointerExited="OnPhotoTabActionPointerExited"
                                                             Tag="2">
                                            <PathIcon Width="16"
                                                      Height="16"
                                                      Data="{StaticResource DaisyIconNavigation}" />
                                        </controls:DaisyButton>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Tab Variants -->
                    <TextBlock Text="Variants" FontWeight="SemiBold" Margin="0,8,0,0" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="None (text only)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="None">
                                <TabItem Header="Tab 1">
                                    <TextBlock Text="Content 1" Padding="10"/>
                                </TabItem>
                                <TabItem Header="Tab 2">
                                    <TextBlock Text="Content 2" Padding="10"/>
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Bordered (default)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Bordered">
                                <TabItem Header="Tab 1">
                                    <TextBlock Text="Content 1" Padding="10"/>
                                </TabItem>
                                <TabItem Header="Tab 2">
                                    <TextBlock Text="Content 2" Padding="10"/>
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Lifted (folder style)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Lifted">
                                <TabItem Header="Tab 1">
                                    <TextBlock Text="Content 1" Padding="10"/>
                                </TabItem>
                                <TabItem Header="Tab 2">
                                    <TextBlock Text="Content 2" Padding="10"/>
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Boxed (pill style)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Boxed">
                                <TabItem Header="Tab 1">
                                    <TextBlock Text="Content 1" Padding="10"/>
                                </TabItem>
                                <TabItem Header="Tab 2">
                                    <TextBlock Text="Content 2" Padding="10"/>
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Tab Sizes -->
                    <TextBlock Text="Sizes" FontWeight="SemiBold" Margin="0,16,0,0" />
                    <WrapPanel Orientation="Horizontal"
                        controls:FlowerySizeManager.IgnoreGlobalSize="True">
                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Extra Small" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Boxed" Size="ExtraSmall">
                                <TabItem Header="Tab 1">
                                    <TextBlock Text="XS" Padding="8" />
                                </TabItem>
                                <TabItem Header="Tab 2">
                                    <TextBlock Text="XS" Padding="8" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Small" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Boxed" Size="Small">
                                <TabItem Header="Tab 1">
                                    <TextBlock Text="Small" Padding="8" />
                                </TabItem>
                                <TabItem Header="Tab 2">
                                    <TextBlock Text="Small" Padding="8" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Medium (default)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Boxed" Size="Medium">
                                <TabItem Header="Tab 1">
                                    <TextBlock Text="Medium" Padding="8" />
                                </TabItem>
                                <TabItem Header="Tab 2">
                                    <TextBlock Text="Medium" Padding="8" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Large" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Boxed" Size="Large">
                                <TabItem Header="Tab 1">
                                    <TextBlock Text="Large" Padding="8" />
                                </TabItem>
                                <TabItem Header="Tab 2">
                                    <TextBlock Text="Large" Padding="8" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Tab Width Modes -->
                    <TextBlock Text="Tab Width Modes" FontWeight="SemiBold" Margin="0,16,0,0" />
                    <TextBlock
                        Text="Control tab sizing behavior to prevent layout shifts or create uniform navigation"
                        Opacity="0.7" FontSize="13" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Auto (default)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Boxed" TabWidthMode="Auto">
                                <TabItem Header="Short">
                                    <TextBlock Text="Content 1" Padding="10" />
                                </TabItem>
                                <TabItem Header="Medium Tab">
                                    <TextBlock Text="Content 2" Padding="10" />
                                </TabItem>
                                <TabItem Header="Longer Tab Name">
                                    <TextBlock Text="Content 3" Padding="10" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Equal (all same width)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Boxed" TabWidthMode="Equal">
                                <TabItem Header="Short">
                                    <TextBlock Text="Content 1" Padding="10" />
                                </TabItem>
                                <TabItem Header="Medium Tab">
                                    <TextBlock Text="Content 2" Padding="10" />
                                </TabItem>
                                <TabItem Header="Longer Tab Name">
                                    <TextBlock Text="Content 3" Padding="10" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Fixed (100px each)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Boxed" TabWidthMode="Fixed" TabWidth="100">
                                <TabItem Header="Tab 1">
                                    <TextBlock Text="Content 1" Padding="10" />
                                </TabItem>
                                <TabItem Header="Tab 2">
                                    <TextBlock Text="Content 2" Padding="10" />
                                </TabItem>
                                <TabItem Header="Tab 3">
                                    <TextBlock Text="Content 3" Padding="10" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Tab Width Constraints -->
                    <TextBlock Text="Width Constraints" FontWeight="SemiBold" Margin="0,16,0,0" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="With MaxWidth (120px)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Bordered" TabMaxWidth="120">
                                <TabItem Header="Short">
                                    <TextBlock Text="Content" Padding="4" />
                                </TabItem>
                                <TabItem
                                    Header="This is a very long tab header that will be truncated">
                                    <TextBlock Text="Content" Padding="4" />
                                </TabItem>
                                <TabItem Header="Normal">
                                    <TextBlock Text="Content" Padding="4" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="With MinWidth (80px)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Lifted" TabMinWidth="80">
                                <TabItem Header="A">
                                    <TextBlock Text="Content" Padding="4" />
                                </TabItem>
                                <TabItem Header="B">
                                    <TextBlock Text="Content" Padding="4" />
                                </TabItem>
                                <TabItem Header="C">
                                    <TextBlock Text="Content" Padding="4" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Real-World Example -->
                    <TextBlock Text="Real-World Example" FontWeight="SemiBold" Margin="0,16,0,0" />
                    <StackPanel Spacing="10">
                        <TextBlock
                            Text="App-style navigation with Equal width (prevents layout shift when switching tabs)"
                            FontSize="12" Opacity="0.7" />
                        <controls:DaisyTabs Variant="Boxed" TabWidthMode="Equal" Size="Small">
                            <TabItem Header="Converter">
                                <TextBlock Text="Color converter content..." Padding="16"
                                    Opacity="0.7" />
                            </TabItem>
                            <TabItem Header="Palette">
                                <TextBlock Text="Palette generator content..." Padding="16"
                                    Opacity="0.7" />
                            </TabItem>
                            <TabItem Header="Gradients">
                                <TextBlock Text="Gradient editor content..." Padding="16"
                                    Opacity="0.7" />
                            </TabItem>
                            <TabItem Header="Accessibility">
                                <TextBlock Text="Contrast checker content..." Padding="16"
                                    Opacity="0.7" />
                            </TabItem>
                            <TabItem Header="Shades">
                                <TextBlock Text="Shade generator content..." Padding="16"
                                    Opacity="0.7" />
                            </TabItem>
                        </controls:DaisyTabs>
                    </StackPanel>

                    <!-- Tab Colors -->
                    <TextBlock Text="Tab Colors" FontWeight="SemiBold" Margin="0,16,0,0" />
                    <TextBlock Text="Set semantic colors on individual tabs using the attached property" FontSize="12" Opacity="0.7" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Bordered with colors" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Bordered">
                                <TabItem Header="Default">
                                    <TextBlock Text="Default color" Padding="10" />
                                </TabItem>
                                <TabItem Header="Primary" controls:DaisyTabs.TabColor="Primary">
                                    <TextBlock Text="Primary color" Padding="10" />
                                </TabItem>
                                <TabItem Header="Error" controls:DaisyTabs.TabColor="Error">
                                    <TextBlock Text="Error color" Padding="10" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,20,10">
                            <TextBlock Text="Boxed with colors" FontSize="12" Opacity="0.7" />
                            <controls:DaisyTabs Variant="Boxed">
                                <TabItem Header="Accent" controls:DaisyTabs.TabColor="Accent">
                                    <TextBlock Text="Accent color" Padding="10" />
                                </TabItem>
                                <TabItem Header="Success" controls:DaisyTabs.TabColor="Success">
                                    <TextBlock Text="Success color" Padding="10" />
                                </TabItem>
                                <TabItem Header="Warning" controls:DaisyTabs.TabColor="Warning">
                                    <TextBlock Text="Warning color" Padding="10" />
                                </TabItem>
                            </controls:DaisyTabs>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Code Editor Tabs Example (VS Code style) -->
                    <TextBlock Text="Code Editor Example (VS Code style)" FontWeight="SemiBold" Margin="0,16,0,0" />
                    <TextBlock Text="Right-click tabs to access context menu with close actions and color selection" FontSize="12" Opacity="0.7" />
                    <StackPanel Spacing="0" Margin="0,0,0,10">
                        <controls:DaisyTabs x:Name="CodeEditorTabs"
                                                Variant="Boxed"
                                                Size="Small"
                                                EnableTabContextMenu="True"
                                                CloseTabRequested="OnCodeEditorCloseTab"
                                                CloseOtherTabsRequested="OnCodeEditorCloseOtherTabs"
                                                CloseTabsToRightRequested="OnCodeEditorCloseTabsToRight"
                                                TabPaletteColorChangeRequested="OnCodeEditorTabPaletteColorChange">
                                <TabItem Header="Program.cs" controls:DaisyTabs.TabPaletteColor="Green">
                                    <StackPanel Margin="16" Spacing="4" MinHeight="200">
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Foreground="{DynamicResource DaisyInfoBrush}" Text="using System;" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Foreground="{DynamicResource DaisyInfoBrush}" Text="using Avalonia;" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Foreground="{DynamicResource DaisyInfoBrush}" Text="using Flowery.Controls;" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12">
                                            <Run Foreground="{DynamicResource DaisyInfoBrush}">namespace</Run> <Run>MyApp;</Run>
                                        </TextBlock>
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12">
                                            <Run Foreground="{DynamicResource DaisyInfoBrush}">public class</Run> <Run Foreground="{DynamicResource DaisySuccessBrush}"> Program</Run>
                                        </TextBlock>
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="{}{" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="    // Entry point" Foreground="{DynamicResource DaisyBase300Brush}" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="{}}" />
                                    </StackPanel>
                                </TabItem>
                                <TabItem Header="MainWindow.axaml" controls:DaisyTabs.TabPaletteColor="Purple">
                                    <StackPanel Margin="16" Spacing="4" MinHeight="200">
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Foreground="{DynamicResource DaisyBase300Brush}" Text="&lt;!-- Main application window --&gt;" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12">
                                            <Run Foreground="{DynamicResource DaisyInfoBrush}">&lt;Window</Run> <Run>x:Class=</Run> <Run Foreground="{DynamicResource DaisyWarningBrush}">"MainWindow"</Run> <Run Foreground="{DynamicResource DaisyInfoBrush}">&gt;</Run>
                                        </TextBlock>
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="    &lt;StackPanel&gt;" Foreground="{DynamicResource DaisyInfoBrush}" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="        &lt;TextBlock Text=&quot;Hello!&quot;/&gt;" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="    &lt;/StackPanel&gt;" Foreground="{DynamicResource DaisyInfoBrush}" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="&lt;/Window&gt;" Foreground="{DynamicResource DaisyInfoBrush}" />
                                    </StackPanel>
                                </TabItem>
                                <TabItem Header="App.axaml.cs" controls:DaisyTabs.TabPaletteColor="Lime">
                                    <StackPanel Margin="16" Spacing="4" MinHeight="200">
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12">
                                            <Run Foreground="{DynamicResource DaisyInfoBrush}">public partial class</Run> <Run Foreground="{DynamicResource DaisySuccessBrush}">App</Run> <Run>:</Run> <Run Foreground="{DynamicResource DaisySuccessBrush}">Application</Run>
                                        </TextBlock>
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="{}{" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="    // Application lifecycle" Foreground="{DynamicResource DaisyBase300Brush}" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="12" Text="{}}" />
                                    </StackPanel>
                                </TabItem>
                                <TabItem Header="README.md" controls:DaisyTabs.TabPaletteColor="Blue">
                                    <StackPanel Margin="16" Spacing="8" MinHeight="200">
                                        <TextBlock FontSize="18" FontWeight="Bold" Text="# My Flowery.NET App" />
                                        <TextBlock Text="A cross-platform desktop application built with Flowery.NET." Opacity="0.8" />
                                        <TextBlock FontSize="14" FontWeight="SemiBold" Text="## Features" Margin="0,8,0,0" />
                                        <TextBlock Text="- Modern UI components" />
                                        <TextBlock Text="- Theme support" />
                                        <TextBlock Text="- Cross-platform" />
                                    </StackPanel>
                                </TabItem>
                                <TabItem Header="errors.log" controls:DaisyTabs.TabPaletteColor="Red">
                                    <StackPanel Margin="16" Spacing="4" MinHeight="200">
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="11" Foreground="{DynamicResource DaisyErrorBrush}" Text="[ERROR] 2024-01-15 10:23:45 - NullReferenceException" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="11" Foreground="{DynamicResource DaisyWarningBrush}" Text="[WARN]  2024-01-15 10:23:44 - Deprecated API call" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="11" Foreground="{DynamicResource DaisyInfoBrush}" Text="[INFO]  2024-01-15 10:23:43 - Application started" />
                                        <TextBlock FontFamily="Consolas,monospace" FontSize="11" Foreground="{DynamicResource DaisyInfoBrush}" Text="[INFO]  2024-01-15 10:23:42 - Loading configuration..." />
                                    </StackPanel>
                                </TabItem>
                            </controls:DaisyTabs>
                        <TextBlock x:Name="CodeEditorStatus"
                                   Text="Ready - 5 files open"
                                   FontSize="11"
                                   Opacity="0.6"
                                   Margin="12,6" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Toast Container -->
        <controls:DaisyToast x:Name="NavigationToast" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" />
    </Grid>

</UserControl>
