                                <controls:DaisyStepItem Content="Shrink the moon" Color="Info"/>
                                <controls:DaisyStepItem Content="Grab the moon" Color="Info"/>
                                <controls:DaisyStepItem Content="Sit on toilet" DataContent="?" Color="Error"/>
