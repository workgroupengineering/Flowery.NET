                                <controls:DaisyStepItem Content="Start" Color="Primary"/>
                                <controls:DaisyStepItem Content="In Progress" Color="Secondary"/>
                                <controls:DaisyStepItem Content="Review" Color="Accent"/>
                                <controls:DaisyStepItem Content="Complete" Color="Success"/>
                            </controls:DaisySteps>
                        </StackPanel>
                    </WrapPanel>

                    <!-- All Colors -->
                    <TextBlock Text="All Available Colors" FontWeight="SemiBold" Margin="0,8,0,0"/>
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <controls:DaisySteps Width="600">
                                <controls:DaisyStepItem Content="Default"/>
