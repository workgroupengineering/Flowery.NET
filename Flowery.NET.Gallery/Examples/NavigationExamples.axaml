                            <controls:DaisySteps Size="Medium" SelectedIndex="1" Width="350">
                                <controls:DaisyStepItem Content="Register" Color="Primary"/>
                                <controls:DaisyStepItem Content="Plan" Color="Primary"/>
                                <controls:DaisyStepItem Content="Purchase"/>
                                <controls:DaisyStepItem Content="Done"/>
                            </controls:DaisySteps>
                        </StackPanel>
                        <StackPanel Spacing="6">
                            <TextBlock Text="Large" FontSize="12" Opacity="0.7"/>
                            <controls:DaisySteps Size="Large" SelectedIndex="1" Width="400">
                                <controls:DaisyStepItem Content="Register" Color="Primary"/>
                                <controls:DaisyStepItem Content="Plan" Color="Primary"/>
                                <controls:DaisyStepItem Content="Purchase"/>
                                <controls:DaisyStepItem Content="Done"/>
                            </controls:DaisySteps>
                        </StackPanel>
                        <StackPanel Spacing="6">
