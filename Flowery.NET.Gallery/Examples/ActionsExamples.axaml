<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET"
    xmlns:services="clr-namespace:Flowery.Services;assembly=Flowery.NET"
    xmlns:local="clr-namespace:Flowery.NET.Gallery.Examples"
    x:Class="Flowery.NET.Gallery.Examples.ActionsExamples">

    <Grid>
        <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled"
            services:FloweryResponsive.IsEnabled="True"
            services:FloweryResponsive.BaseMaxWidth="430">
            <StackPanel Spacing="24" Margin="24,0,24,32">

                <!-- Button -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="button" Title="Button" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Colors" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <WrapPanel>
                                <controls:DaisyButton Content="Default" Margin="4"/>
                                <controls:DaisyButton Variant="Neutral" Content="Neutral" Margin="4"/>
                                <controls:DaisyButton Variant="Primary" Content="Primary" Margin="4"/>
                                <controls:DaisyButton Variant="Secondary" Content="Secondary" Margin="4"/>
                                <controls:DaisyButton Variant="Accent" Content="Accent" Margin="4"/>
                                <controls:DaisyButton Variant="Info" Content="Info" Margin="4"/>
                                <controls:DaisyButton Variant="Success" Content="Success" Margin="4"/>
                                <controls:DaisyButton Variant="Warning" Content="Warning" Margin="4"/>
                                <controls:DaisyButton Variant="Error" Content="Error" Margin="4"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Styles" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <WrapPanel>
                                <controls:DaisyButton Variant="Ghost" Content="Ghost" Margin="4"/>
                                <controls:DaisyButton Variant="Link" Content="Link" Margin="4"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Outline" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <WrapPanel>
                                <controls:DaisyButton ButtonStyle="Outline" Content="Default" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Outline" Variant="Primary" Content="Primary" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Outline" Variant="Secondary" Content="Secondary" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Outline" Variant="Accent" Content="Accent" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Outline" Variant="Info" Content="Info" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Outline" Variant="Success" Content="Success" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Outline" Variant="Warning" Content="Warning" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Outline" Variant="Error" Content="Error" Margin="4"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Dash" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <WrapPanel>
                                <controls:DaisyButton ButtonStyle="Dash" Content="Default" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Dash" Variant="Primary" Content="Primary" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Dash" Variant="Secondary" Content="Secondary" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Dash" Variant="Accent" Content="Accent" Margin="4"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Soft" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <WrapPanel>
                                <controls:DaisyButton ButtonStyle="Soft" Content="Default" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Soft" Variant="Primary" Content="Primary" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Soft" Variant="Secondary" Content="Secondary" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Soft" Variant="Accent" Content="Accent" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Soft" Variant="Info" Content="Info" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Soft" Variant="Success" Content="Success" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Soft" Variant="Warning" Content="Warning" Margin="4"/>
                                <controls:DaisyButton ButtonStyle="Soft" Variant="Error" Content="Error" Margin="4"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20"
                            controls:FlowerySizeManager.IgnoreGlobalSize="True">
                            <TextBlock Text="Sizes" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <WrapPanel VerticalAlignment="Center">
                                <controls:DaisyButton Size="ExtraSmall" Content="Extra Small" Margin="4"/>
                                <controls:DaisyButton Size="Small" Content="Small" Margin="4"/>
                                <controls:DaisyButton Size="Medium" Content="Medium" Margin="4"/>
                                <controls:DaisyButton Size="Large" Content="Large" Margin="4"/>
                                <controls:DaisyButton Size="ExtraLarge" Content="Extra Large" Margin="4"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Shapes" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <WrapPanel VerticalAlignment="Center">
                                <controls:DaisyButton Shape="Wide" Content="Wide" Margin="4"/>
                                <controls:DaisyButton Shape="Square" Variant="Primary" Margin="4">
                                    <PathIcon Data="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" Width="20" Height="20" />
                                </controls:DaisyButton>
                                <controls:DaisyButton Shape="Circle" Variant="Secondary" Margin="4">
                                    <PathIcon Data="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" Width="20" Height="20" />
                                </controls:DaisyButton>
                                <controls:DaisyButton Shape="Square" Size="Small" Variant="Accent" Margin="4">
                                    <PathIcon Data="M6 18L18 6M6 6l12 12" Width="16" Height="16" />
                                </controls:DaisyButton>
                                <controls:DaisyButton Shape="Circle" Size="Large" Variant="Info" Margin="4">
                                    <PathIcon Data="M12 4.5v15m7.5-7.5h-15" Width="24" Height="24" />
                                </controls:DaisyButton>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                            <TextBlock Text="Block (Full Width)" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <controls:DaisyButton Shape="Block" Variant="Primary" Content="Block Button" Margin="4"/>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="States" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <WrapPanel>
                                <controls:DaisyButton IsActive="True" Content="Active" Margin="4"/>
                                <controls:DaisyButton IsActive="True" Variant="Primary" Content="Active Primary" Margin="4"/>
                                <controls:DaisyButton IsEnabled="False" Content="Disabled" Margin="4"/>
                                <controls:DaisyButton IsEnabled="False" Variant="Primary" Content="Disabled Primary" Margin="4"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Shadow Properties" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <WrapPanel VerticalAlignment="Center">
                                <controls:DaisyButton Content="With Shadow" ShowShadow="True" Margin="4"/>
                                <controls:DaisyButton Content="Custom Shadow" Variant="Primary" ShowShadow="True"
                                                      ShadowOffsetX="2" ShadowOffsetY="6" ShadowBlur="10" ShadowColor="#60000000" Margin="4"/>
                                <controls:DaisyButton Content="Strong Shadow" Variant="Secondary" ShowShadow="True"
                                                      ShadowOffsetY="8" ShadowBlur="16" ShadowColor="#80000000" Margin="4"/>
                                <controls:DaisyButton Content="Colored Shadow" Variant="Accent" ShowShadow="True"
                                                      ShadowOffsetY="5" ShadowBlur="12" ShadowColor="#5065d3da" Margin="4"/>
                            </WrapPanel>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Figma Comment -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="figma-comment" Title="Figma Comment (Recipe)" />
                    <TextBlock Text="Interactive comment bubble that expands on click." Opacity="0.7" FontSize="13" />

                    <Border Height="150" Background="{DynamicResource DaisyBase200Brush}" CornerRadius="12">
                        <Panel x:Name="CommentContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- We'll use a Toggle to control state for simplicity in demo -->
                            <ToggleButton x:Name="CommentToggle" Padding="0" Background="Transparent" BorderThickness="0">
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <Border x:Name="Bubble" Background="{DynamicResource DaisyBase100Brush}"
                                                CornerRadius="16" BorderBrush="{DynamicResource DaisyBase300Brush}" BorderThickness="1"
                                                BoxShadow="0 4 12 #20000000" Padding="4">
                                            <Border.Transitions>
                                                <Transitions>
                                                    <DoubleTransition Property="Width" Duration="0:0:0.3" Easing="CubicEaseOut" />
                                                    <DoubleTransition Property="Height" Duration="0:0:0.3" Easing="CubicEaseOut" />
                                                </Transitions>
                                            </Border.Transitions>
                                            <Grid ColumnDefinitions="Auto, *">
                                                <controls:DaisyAvatar Size="Small" Margin="4" VerticalAlignment="Top" IsPlaceholder="True" Background="{DynamicResource DaisyPrimaryBrush}">
                                                    <TextBlock Text="EC" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource DaisyPrimaryContentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </controls:DaisyAvatar>
                                                <StackPanel Grid.Column="1" Margin="8,4,12,8" IsVisible="{Binding $parent[ToggleButton].IsChecked}" Width="200">
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <TextBlock Text="Edu Calvo" FontSize="11" FontWeight="Bold" />
                                                        <TextBlock Text="Just now" FontSize="10" Opacity="0.5" />
                                                    </StackPanel>
                                                    <TextBlock Text="What happens if we adjust this to handle a light and dark mode?" FontSize="11" TextWrapping="Wrap" Margin="0,4,0,0" LineHeight="16" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </Panel>
                    </Border>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Copy Button -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="copybutton" Title="Copy Button" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="260">
                            <TextBlock Text="Text copy with success state" FontSize="12" Opacity="0.7" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <controls:DaisyCopyButton CopyText="Hello from Flowery.NET"
                                    MinWidth="80"
                                    HorizontalContentAlignment="Center" />
                                <controls:DaisyCopyButton Variant="Primary"
                                    Content="Copy invite"
                                    CopyText="https://example.com/invite/abc"
                                    SuccessContent="Copied!"
                                    MinWidth="110"
                                    HorizontalContentAlignment="Center" />
                                <controls:DaisyCopyButton Variant="Ghost" Shape="Square" Size="Small"
                                    CopyText="icon-only">
                                    <controls:DaisyCopyButton.SuccessContent>
                                        <PathIcon Data="{StaticResource DaisyIconCheck}" Width="16" Height="16" />
                                    </controls:DaisyCopyButton.SuccessContent>
                                    <PathIcon Data="{StaticResource DaisyIconCopy}" Width="16" Height="16" />
                                </controls:DaisyCopyButton>
                            </StackPanel>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Dropdown -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="dropdown" Title="Dropdown" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="200">
                            <TextBlock Text="Basic Select" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <controls:DaisySelect PlaceholderText="Select option">
                                <ComboBoxItem>Action 1</ComboBoxItem>
                                <ComboBoxItem>Action 2</ComboBoxItem>
                                <ComboBoxItem>Action 3</ComboBoxItem>
                            </controls:DaisySelect>
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="200">
                            <TextBlock Text="Theme Dropdown" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <controls:DaisyThemeDropdown Width="180"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Dropdown Menu -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="dropdownmenu" Title="Dropdown Menu" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="240">
                            <TextBlock Text="Menu-style dropdown for actions (select → handle → reset)" FontSize="12" Opacity="0.7" />
                            <controls:DaisyDropdown x:Name="MenuDropdown"
                                PlaceholderText="Pick action"
                                ItemsSource="{Binding DropdownMenuItems}"
                                Width="220"
                                CloseOnSelection="True"
                                SelectedItemChanged="OnMenuDropdownSelectedItemChanged" />
                            <TextBlock Text="Tip: use this for action menus. For a value picker, prefer DaisySelect." FontSize="12" Opacity="0.6" TextWrapping="Wrap" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- FAB / Speed Dial -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="fab" Title="FAB / Speed Dial" />
                    <TextBlock Text="Click the FAB buttons below to expand" FontSize="12" Opacity="0.7"/>
                    <WrapPanel Orientation="Horizontal">
                        <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="8" Margin="0,0,8,8" Width="85" Height="220">
                            <Grid>
                                <TextBlock Text="Vertical" FontSize="10" Opacity="0.6" VerticalAlignment="Top"/>
                                <controls:DaisyFab TriggerContent="+" TriggerVariant="Primary" Size="Medium">
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Content="A" Click="OnFabItemClick" Tag="Vertical A"/>
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Content="B" Click="OnFabItemClick" Tag="Vertical B"/>
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Content="C" Click="OnFabItemClick" Tag="Vertical C"/>
                                </controls:DaisyFab>
                            </Grid>
                        </Border>

                        <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="8" Margin="0,0,8,8" Width="85" Height="220">
                            <Grid>
                                <TextBlock Text="Icons" FontSize="10" Opacity="0.6" VerticalAlignment="Top"/>
                                <controls:DaisyFab TriggerVariant="Secondary" Size="Medium">
                                    <controls:DaisyFab.TriggerContent>
                                        <PathIcon Data="{StaticResource DaisyIconPlus}" Width="16" Height="16" />
                                    </controls:DaisyFab.TriggerContent>
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Click="OnFabItemClick" Tag="Icon Home">
                                        <PathIcon Data="{StaticResource DaisyIconHome}" Width="16" Height="16" />
                                    </controls:DaisyButton>
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Click="OnFabItemClick" Tag="Icon Settings">
                                        <PathIcon Data="{StaticResource DaisyIconSettings}" Width="16" Height="16" />
                                    </controls:DaisyButton>
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Click="OnFabItemClick" Tag="Icon User">
                                        <PathIcon Data="{StaticResource DaisyIconUser}" Width="16" Height="16" />
                                    </controls:DaisyButton>
                                </controls:DaisyFab>
                            </Grid>
                        </Border>

                        <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="8" Margin="0,0,8,8" Width="85" Height="220">
                            <Grid>
                                <TextBlock Text="Flower" FontSize="10" Opacity="0.6" VerticalAlignment="Top"/>
                                <controls:DaisyFab TriggerContent="F" TriggerVariant="Success" Layout="Flower" Size="Medium">
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Content="A" Click="OnFabItemClick" Tag="Flower A"/>
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Content="B" Click="OnFabItemClick" Tag="Flower B"/>
                                </controls:DaisyFab>
                            </Grid>
                        </Border>

                        <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="8" Margin="0,0,8,8" Width="85" Height="220">
                            <Grid>
                                <TextBlock Text="Variants" FontSize="10" Opacity="0.6" VerticalAlignment="Top"/>
                                <controls:DaisyFab TriggerContent="★" TriggerVariant="Warning" Size="Medium">
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Content="1" Variant="Info" Click="OnFabItemClick" Tag="Variant 1"/>
                                    <controls:DaisyButton Shape="Circle" Size="Medium" Content="2" Variant="Success" Click="OnFabItemClick" Tag="Variant 2"/>
                                </controls:DaisyFab>
                            </Grid>
                        </Border>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Popover -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="popover" Title="Popover" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                            <TextBlock Text="Rich Popover" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                            <controls:DaisyPopover MatchTargetWidth="True">
                                <controls:DaisyPopover.TriggerContent>
                                    <controls:DaisyButton Content="Open Popover" Variant="Primary" />
                                </controls:DaisyPopover.TriggerContent>
                                <controls:DaisyPopover.PopoverContent>
                                    <StackPanel Spacing="8" Width="260">
                                        <TextBlock Text="Video Tutorial" FontWeight="SemiBold" />
                                        <TextBlock Text="A popover can host any content, including action buttons."
                                            Opacity="0.8" TextWrapping="Wrap" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <controls:DaisyButton Content="Play" Size="Small" Variant="Secondary" />
                                            <controls:DaisyButton Content="Copy link" Size="Small" Variant="Ghost" />
                                        </StackPanel>
                                    </StackPanel>
                                </controls:DaisyPopover.PopoverContent>
                            </controls:DaisyPopover>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Modal -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="modal" Title="Modal" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <controls:DaisyButton Content="Open Modal" x:Name="OpenModalBtn" Variant="Primary" Click="OpenModalBtn_Click"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Modal Corner Radii -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="modal-radii" Title="Modal Corner Radii" />
                    <TextBlock Text="Modals support individual corner radius via TopLeftRadius, TopRightRadius, BottomLeftRadius, BottomRightRadius. Click a preview to open!" Opacity="0.7" FontSize="13"/>
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="280">
                            <TextBlock Text="Default Corners (uniform 16px)" FontSize="12" Opacity="0.7"/>
                            <Button Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="OpenDefaultModal_Click">
                                <Border Background="{DynamicResource DaisyBase200Brush}" Height="150" Width="280" CornerRadius="8" ClipToBounds="True">
                                    <controls:DaisyModal IsOpen="True">
                                        <TextBlock Text="Default Modal" FontWeight="Bold"/>
                                    </controls:DaisyModal>
                                </Border>
                            </Button>
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="280">
                            <TextBlock Text="Custom Corners (pill top)" FontSize="12" Opacity="0.7"/>
                            <Button Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="OpenPillTopModal_Click">
                                <Border Background="{DynamicResource DaisyBase200Brush}" Height="150" Width="280" CornerRadius="8" ClipToBounds="True">
                                    <controls:DaisyModal IsOpen="True"
                                                        TopLeftRadius="24" TopRightRadius="24"
                                                        BottomLeftRadius="8" BottomRightRadius="8">
                                        <TextBlock Text="Pill Top Modal" FontWeight="Bold"/>
                                    </controls:DaisyModal>
                                </Border>
                            </Button>
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20" Width="280">
                            <TextBlock Text="Sharp Corners (0px)" FontSize="12" Opacity="0.7"/>
                            <Button Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="OpenSharpModal_Click">
                                <Border Background="{DynamicResource DaisyBase200Brush}" Height="150" Width="280" CornerRadius="8" ClipToBounds="True">
                                    <controls:DaisyModal IsOpen="True"
                                                        TopLeftRadius="0" TopRightRadius="0"
                                                        BottomLeftRadius="0" BottomRightRadius="0">
                                        <TextBlock Text="Sharp Modal" FontWeight="Bold"/>
                                    </controls:DaisyModal>
                                </Border>
                            </Button>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Swap -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="swap" Title="Swap" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="12" Margin="0,0,40,20" Width="300">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Text swap" FontSize="12" Opacity="0.7" VerticalAlignment="Center" Width="140"/>
                                <controls:DaisySwap OffContent="OFF" OnContent="ON" FontSize="18" FontWeight="Bold" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Volume icons" FontSize="12" Opacity="0.7" VerticalAlignment="Center" Width="140"/>
                                <controls:DaisySwap>
                                    <controls:DaisySwap.OffContent>
                                        <PathIcon Width="32" Height="32" Foreground="{DynamicResource DaisyBaseContentBrush}"
                                                  Data="M3,9H7L12,4V20L7,15H3V9M16.59,12L14,9.41L15.41,8L18,10.59L20.59,8L22,9.41L19.41,12L22,14.59L20.59,16L18,13.41L15.41,16L14,14.59L16.59,12Z" />
                                    </controls:DaisySwap.OffContent>
                                    <controls:DaisySwap.OnContent>
                                        <PathIcon Width="32" Height="32" Foreground="{DynamicResource DaisyBaseContentBrush}"
                                                  Data="M14,3.23V5.29C16.89,6.15 19,8.83 19,12C19,15.17 16.89,17.84 14,18.7V20.77C18,19.86 21,16.28 21,12C21,7.72 18,4.14 14,3.23M16.5,12C16.5,10.23 15.5,8.71 14,7.97V16C15.5,15.29 16.5,13.76 16.5,12M3,9V15H7L12,20V4L7,9H3Z" />
                                    </controls:DaisySwap.OnContent>
                                </controls:DaisySwap>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Rotate effect (sun/moon)" FontSize="12" Opacity="0.7" VerticalAlignment="Center" Width="140"/>
                                <controls:DaisySwap TransitionEffect="Rotate">
                                    <controls:DaisySwap.OffContent>
                                        <PathIcon Width="28" Height="28" Foreground="{DynamicResource DaisyBaseContentBrush}"
                                                  Data="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z" />
                                    </controls:DaisySwap.OffContent>
                                    <controls:DaisySwap.OnContent>
                                        <PathIcon Width="28" Height="28" Foreground="{DynamicResource DaisyBaseContentBrush}"
