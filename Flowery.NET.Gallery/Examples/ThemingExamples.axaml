<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET"
             xmlns:local="clr-namespace:Flowery.NET.Gallery.Examples"
             x:Class="Flowery.NET.Gallery.Examples.ThemingExamples">

    <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- CSS Theme Converter -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="css-theme-converter" Title="CSS Theme Converter" />
                <WrapPanel Orientation="Horizontal">
                    <controls:DaisyCard Width="660" Margin="0,0,20,20">
                        <StackPanel Spacing="15">
                            <TextBlock Text="Load a DaisyUI CSS theme file, convert to AXAML, and apply at runtime." Opacity="0.7" TextWrapping="Wrap"/>
                            <Grid ColumnDefinitions="*, Auto">
                                <controls:DaisyInput x:Name="CssFilePathInput" Watermark="Path to .css file (e.g., synthwave.css)" />
                                <controls:DaisyButton Grid.Column="1" Content="Browse..." Margin="8,0,0,0" Click="BrowseCssFile_Click" />
                            </Grid>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <controls:DaisyButton Content="Parse &amp; Apply Theme" Variant="Primary" Click="ParseAndApplyTheme_Click" />
                                <controls:DaisyButton Content="Export AXAML" Variant="Secondary" Click="ExportAxaml_Click" />
                            </StackPanel>
                            <TextBlock x:Name="ThemeStatusText" Text="" Foreground="{DynamicResource DaisyInfoBrush}" TextWrapping="Wrap" />
                            <Border x:Name="AxamlOutputBorder" IsVisible="False" Background="{DynamicResource DaisyBase300Brush}" Padding="10" CornerRadius="4" MaxHeight="200">
                                <ScrollViewer>
                                    <TextBlock x:Name="AxamlOutputText" FontFamily="Consolas" FontSize="11" TextWrapping="Wrap" />
                                </ScrollViewer>
                            </Border>
                        </StackPanel>
                    </controls:DaisyCard>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Theme Controller -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="theme-controller" Title="Theme Controller" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="350">
                        <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto, Auto" RowSpacing="10" ColumnSpacing="10">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Toggle" FontSize="12" Opacity="0.7"/>
                                <controls:DaisyThemeController Mode="Toggle" />
                            </StackPanel>
                            <StackPanel Spacing="4" Grid.Column="1">
                                <TextBlock Text="Checkbox" FontSize="12" Opacity="0.7"/>
                                <controls:DaisyThemeController Mode="Checkbox" />
                            </StackPanel>
                            <StackPanel Spacing="4" Grid.Row="1">
                                <TextBlock Text="Swap" FontSize="12" Opacity="0.7"/>
                                <controls:DaisyThemeController Mode="Swap" />
                            </StackPanel>
                            <StackPanel Spacing="4" Grid.Row="1" Grid.Column="1">
                                <TextBlock Text="Toggle with Icons" FontSize="12" Opacity="0.7"/>
                                <controls:DaisyThemeController Mode="ToggleWithIcons" />
                            </StackPanel>
                            <StackPanel Spacing="4" Grid.Row="2" Grid.ColumnSpan="2">
                                <TextBlock Text="Toggle with Text" FontSize="12" Opacity="0.7"/>
                                <controls:DaisyThemeController Mode="ToggleWithText"
                                    UncheckedTheme="Light" CheckedTheme="Synthwave"
                                    UncheckedLabel="Light" CheckedLabel="Synthwave" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Theme Radio -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="theme-radio" Title="Theme Radio" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="200">
                        <TextBlock Text="Radio Input Mode" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <TextBlock Text="Select a theme using radio buttons" FontSize="12" Opacity="0.7"/>
                        <StackPanel Spacing="8">
                            <controls:DaisyThemeRadio Content="Light" ThemeName="Light" GroupName="ThemeRadios" Size="Small" />
                            <controls:DaisyThemeRadio Content="Dark" ThemeName="Dark" GroupName="ThemeRadios" Size="Small" />
                            <controls:DaisyThemeRadio Content="Retro" ThemeName="Retro" GroupName="ThemeRadios" Size="Small" />
                            <controls:DaisyThemeRadio Content="Cyberpunk" ThemeName="Cyberpunk" GroupName="ThemeRadios" Size="Small" />
                            <controls:DaisyThemeRadio Content="Valentine" ThemeName="Valentine" GroupName="ThemeRadios" Size="Small" />
                            <controls:DaisyThemeRadio Content="Aqua" ThemeName="Aqua" GroupName="ThemeRadios" Size="Small" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="180">
                        <TextBlock Text="Button Mode" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <TextBlock Text="Joined button style" FontSize="12" Opacity="0.7"/>
                        <controls:DaisyJoin Orientation="Vertical">
                            <controls:DaisyThemeRadio Content="Light" ThemeName="Light" Mode="Button" GroupName="ThemeButtons" />
                            <controls:DaisyThemeRadio Content="Dark" ThemeName="Dark" Mode="Button" GroupName="ThemeButtons" />
                            <controls:DaisyThemeRadio Content="Retro" ThemeName="Retro" Mode="Button" GroupName="ThemeButtons" />
                            <controls:DaisyThemeRadio Content="Cyberpunk" ThemeName="Cyberpunk" Mode="Button" GroupName="ThemeButtons" />
                            <controls:DaisyThemeRadio Content="Synthwave" ThemeName="Synthwave" Mode="Button" GroupName="ThemeButtons" />
                        </controls:DaisyJoin>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</UserControl>
