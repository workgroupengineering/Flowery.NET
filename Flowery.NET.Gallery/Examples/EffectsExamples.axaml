<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET"
    xmlns:fx="clr-namespace:Flowery.Effects;assembly=Flowery.NET"
    xmlns:services="clr-namespace:Flowery.Services;assembly=Flowery.NET"
    xmlns:local="clr-namespace:Flowery.NET.Gallery.Examples"
    xmlns:galloc="clr-namespace:Flowery.NET.Gallery.Localization"
    x:Class="Flowery.NET.Gallery.Examples.EffectsExamples">

    <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled"
        services:FloweryResponsive.IsEnabled="True"
        services:FloweryResponsive.BaseMaxWidth="430">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- Reveal Effect -->
            <StackPanel Spacing="12">
                <local:SectionHeader x:Name="RevealSectionHeader" SectionId="reveal"
                    Title="{galloc:Localize Effects_Reveal_Title}" />
                <TextBlock x:Name="RevealDescription"
                    Text="{galloc:Localize Effects_Reveal_Description}"
                    Opacity="0.7"
                    FontSize="13" Margin="0,0,0,4" />

                <controls:DaisyButton x:Name="ReplayButton"
                    Content="{galloc:Localize Effects_Reveal_ReplayButton}"
                    Click="ReplayReveal_Click" Variant="Ghost" Size="Small" Margin="0,0,0,8" />

                <!-- Mode Examples Grid -->
                <WrapPanel Orientation="Horizontal">
                    <!-- FadeReveal -->
                    <Border Width="300" MinWidth="280" Margin="0,0,8,8" Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="12">
                        <StackPanel Spacing="6">
                            <TextBlock x:Name="FadeRevealTitle"
                                Text="{galloc:Localize Effects_Reveal_FadeReveal_Title}"
                                FontWeight="SemiBold" FontSize="12" />
                            <TextBlock x:Name="FadeRevealDesc"
                                Text="{galloc:Localize Effects_Reveal_FadeReveal_Desc}"
                                Opacity="0.6" FontSize="11" />
                            <Border x:Name="RevealDemo"
                                    Background="{DynamicResource DaisyPrimaryBrush}"
                                    CornerRadius="6" Padding="12"
                                    fx:RevealBehavior.IsEnabled="True"
                                    fx:RevealBehavior.Duration="0:0:0.6"
                                    fx:RevealBehavior.Direction="Bottom"
                                    fx:RevealBehavior.Distance="30">
                                <TextBlock x:Name="FadeRevealDemo"
                                    Text="{galloc:Localize Effects_Reveal_FadeReveal_Demo}"
                                    Foreground="{DynamicResource DaisyPrimaryContentBrush}"
                                    FontSize="12" HorizontalAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- SlideIn -->
                    <Border Width="300" MinWidth="280" Margin="0,0,8,8" Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="12" ClipToBounds="True">
                        <StackPanel Spacing="6">
                            <TextBlock x:Name="SlideInTitle" FontWeight="SemiBold"
                                Text="{galloc:Localize Effects_Reveal_SlideIn_Title}"
                                FontSize="12" />
                            <TextBlock x:Name="SlideInDesc"
                                Text="{galloc:Localize Effects_Reveal_SlideIn_Desc}"
                                Opacity="0.6" FontSize="11" />
                            <Border x:Name="SlideInDemo"
                                    Background="{DynamicResource DaisySecondaryBrush}"
                                    CornerRadius="6" Padding="12"
                                    fx:RevealBehavior.IsEnabled="True"
                                    fx:RevealBehavior.Mode="SlideIn"
                                    fx:RevealBehavior.Duration="0:0:0.8"
                                    fx:RevealBehavior.Direction="Left"
                                    fx:RevealBehavior.Distance="80">
                                <TextBlock x:Name="SlideInDemoText"
                                    Text="{galloc:Localize Effects_Reveal_SlideIn_Demo}"
                                    Foreground="{DynamicResource DaisySecondaryContentBrush}"
                                    FontSize="12" HorizontalAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- FadeOnly -->
                    <Border Width="300" MinWidth="280" Margin="0,0,8,8" Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="12">
                        <StackPanel Spacing="6">
                            <TextBlock x:Name="FadeOnlyTitle" FontWeight="SemiBold"
                                Text="{galloc:Localize Effects_Reveal_FadeOnly_Title}"
                                FontSize="12" />
                            <TextBlock x:Name="FadeOnlyDesc"
                                Text="{galloc:Localize Effects_Reveal_FadeOnly_Desc}"
                                Opacity="0.6" FontSize="11" />
                            <Border x:Name="FadeOnlyDemo"
                                    Background="{DynamicResource DaisyAccentBrush}"
                                    CornerRadius="6" Padding="12"
                                    fx:RevealBehavior.IsEnabled="True"
                                    fx:RevealBehavior.Mode="FadeOnly"
                                    fx:RevealBehavior.Duration="0:0:0.8">
                                <TextBlock x:Name="FadeOnlyDemoText"
                                    Text="{galloc:Localize Effects_Reveal_FadeOnly_Demo}"
                                    Foreground="{DynamicResource DaisyAccentContentBrush}"
                                    FontSize="12" HorizontalAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Scale -->
                    <Border Width="300" MinWidth="280" Margin="0,0,8,8" Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="12">
                        <StackPanel Spacing="6">
                            <TextBlock x:Name="ScaleTitle" FontWeight="SemiBold"
                                Text="{galloc:Localize Effects_Reveal_Scale_Title}"
                                FontSize="12" />
                            <TextBlock x:Name="ScaleDesc" Opacity="0.6"
                                Text="{galloc:Localize Effects_Reveal_Scale_Desc}"
                                FontSize="11" />
                            <Border x:Name="ScaleDemo"
                                    Background="{DynamicResource DaisyInfoBrush}"
                                    CornerRadius="6" Padding="12"
                                    fx:RevealBehavior.IsEnabled="True"
                                    fx:RevealBehavior.Mode="Scale"
                                    fx:RevealBehavior.Duration="0:0:0.5">
                                <TextBlock x:Name="ScaleDemoText"
                                    Text="{galloc:Localize Effects_Reveal_Scale_Demo}"
                                    Foreground="{DynamicResource DaisyInfoContentBrush}"
                                    FontSize="12" HorizontalAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- ScaleSlide -->
                    <Border Width="300" MinWidth="280" Margin="0,0,8,8" Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="12" ClipToBounds="True">
                        <StackPanel Spacing="6">
                            <TextBlock x:Name="ScaleSlideTitle"
                                Text="{galloc:Localize Effects_Reveal_ScaleSlide_Title}"
                                FontWeight="SemiBold" FontSize="12" />
                            <TextBlock x:Name="ScaleSlideDesc"
                                Text="{galloc:Localize Effects_Reveal_ScaleSlide_Desc}"
                                Opacity="0.6" FontSize="11" />
                            <Border x:Name="ScaleSlideDemo"
                                    Background="{DynamicResource DaisySuccessBrush}"
                                    CornerRadius="6" Padding="12"
                                    fx:RevealBehavior.IsEnabled="True"
                                    fx:RevealBehavior.Mode="ScaleSlide"
                                    fx:RevealBehavior.Duration="0:0:0.6"
                                    fx:RevealBehavior.Direction="Bottom"
                                    fx:RevealBehavior.Distance="40">
                                <TextBlock x:Name="ScaleSlideDemoText"
                                    Text="{galloc:Localize Effects_Reveal_ScaleSlide_Demo}"
                                    Foreground="{DynamicResource DaisySuccessContentBrush}"
                                    FontSize="12" HorizontalAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Directions -->
                <TextBlock x:Name="RevealDirectionsTitle"
                    Text="{galloc:Localize Effects_Reveal_Directions_Title}"
                    FontWeight="SemiBold" Margin="0,8,0,4" />
                <WrapPanel x:Name="RevealDirections" Orientation="Horizontal">
                    <Border Background="{DynamicResource DaisyInfoBrush}" CornerRadius="6" Padding="12" Margin="0,0,8,8"
                            fx:RevealBehavior.IsEnabled="True" fx:RevealBehavior.Direction="Top" fx:RevealBehavior.Distance="30">
                        <TextBlock Text="Top" Foreground="{DynamicResource DaisyInfoContentBrush}" FontSize="12"/>
                    </Border>
                    <Border Background="{DynamicResource DaisySuccessBrush}" CornerRadius="6" Padding="12" Margin="0,0,8,8"
                            fx:RevealBehavior.IsEnabled="True" fx:RevealBehavior.Direction="Left" fx:RevealBehavior.Distance="30">
                        <TextBlock Text="Left" Foreground="{DynamicResource DaisySuccessContentBrush}" FontSize="12"/>
                    </Border>
                    <Border Background="{DynamicResource DaisyWarningBrush}" CornerRadius="6" Padding="12" Margin="0,0,8,8"
                            fx:RevealBehavior.IsEnabled="True" fx:RevealBehavior.Direction="Right" fx:RevealBehavior.Distance="30">
                        <TextBlock Text="Right" Foreground="{DynamicResource DaisyWarningContentBrush}" FontSize="12"/>
                    </Border>
                    <Border Background="{DynamicResource DaisyErrorBrush}" CornerRadius="6" Padding="12" Margin="0,0,8,8"
                            fx:RevealBehavior.IsEnabled="True" fx:RevealBehavior.Direction="Bottom" fx:RevealBehavior.Distance="30">
                        <TextBlock Text="Bottom" Foreground="{DynamicResource DaisyErrorContentBrush}" FontSize="12"/>
                    </Border>
                </WrapPanel>
            </StackPanel>

            <!-- Scramble Hover Effect -->
            <StackPanel Spacing="12">
                <local:SectionHeader x:Name="ScrambleSectionHeader" SectionId="scramble"
                    Title="{galloc:Localize Effects_Scramble_Title}" />
                <TextBlock x:Name="ScrambleDescription"
                    Text="{galloc:Localize Effects_Scramble_Description}"
                    Opacity="0.7" FontSize="13" Margin="0,0,0,8" />

                <TextBlock x:Name="ScrambleInstruction"
                    Text="{galloc:Localize Effects_Scramble_Instruction}"
                    FontWeight="SemiBold" Margin="0,0,0,4" />
                <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock x:Name="ScrambleDemo1"
                            Text="{galloc:Localize Effects_Scramble_Demo1}"
                            FontSize="24" FontWeight="Bold"
                            HorizontalAlignment="Stretch"
                            TextAlignment="Center"
                            Foreground="{DynamicResource DaisyPrimaryBrush}"
                            fx:ScrambleHoverBehavior.IsEnabled="True"
                            fx:ScrambleHoverBehavior.Duration="0:0:0.5" />
                        <TextBlock x:Name="ScrambleDemo2"
                            Text="{galloc:Localize Effects_Scramble_Demo2}"
                            FontSize="18"
                            HorizontalAlignment="Stretch"
                            TextAlignment="Center"
                            Foreground="{DynamicResource DaisySecondaryBrush}"
                            fx:ScrambleHoverBehavior.IsEnabled="True"
                            fx:ScrambleHoverBehavior.ScrambleChars="▓▒░█▌▐"
                            fx:ScrambleHoverBehavior.Duration="0:0:0.8" />
                        <TextBlock x:Name="ScrambleDemo3"
                            Text="{galloc:Localize Effects_Scramble_Demo3}"
                            FontSize="18"
                            HorizontalAlignment="Stretch"
                            TextAlignment="Center"
                            Foreground="{DynamicResource DaisyAccentBrush}"
                            fx:ScrambleHoverBehavior.IsEnabled="True"
                            fx:ScrambleHoverBehavior.ScrambleChars="0123456789"
                            fx:ScrambleHoverBehavior.Duration="0:0:0.6" />
                        <TextBlock x:Name="ScrambleDemo4"
                            Text="{galloc:Localize Effects_Scramble_Demo4}"
                            FontSize="20" FontWeight="Bold"
                            FontFamily="Consolas,Courier New,monospace"
                            HorizontalAlignment="Stretch"
                            TextAlignment="Center"
                            Foreground="{DynamicResource DaisyWarningBrush}"
                            fx:ScrambleHoverBehavior.IsEnabled="True"
                            fx:ScrambleHoverBehavior.RevealStyle="SplitFlap"
                            fx:ScrambleHoverBehavior.Duration="0:0:2.5" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Wave Text Effect -->
            <StackPanel Spacing="12">
                <local:SectionHeader x:Name="WaveSectionHeader" SectionId="wave"
                    Title="{galloc:Localize Effects_Wave_Title}" />
                <TextBlock x:Name="WaveDescription"
                    Text="{galloc:Localize Effects_Wave_Description}"
                    Opacity="0.7" FontSize="13"
                    Margin="0,0,0,8" />

                <TextBlock x:Name="WaveInstruction"
                    Text="{galloc:Localize Effects_Wave_Instruction}"
                    FontWeight="SemiBold" Margin="0,0,0,4" />
                <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="24">
                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                        <TextBlock x:Name="WaveDemo1"
                            Text="{galloc:Localize Effects_Wave_Demo1}"
                            FontSize="24" FontWeight="Bold"
                            Foreground="{DynamicResource DaisyPrimaryBrush}"
                            fx:WaveTextBehavior.IsEnabled="True"
                            fx:WaveTextBehavior.IsPerCharacter="True"
                            fx:WaveTextBehavior.Amplitude="8"
                            fx:WaveTextBehavior.Duration="0:0:1"
                            fx:WaveTextBehavior.StaggerDelay="0:0:0.05" />
                        <TextBlock x:Name="WaveDemo2"
                            Text="{galloc:Localize Effects_Wave_Demo2}"
                            FontSize="18"
                            Foreground="{DynamicResource DaisySecondaryBrush}"
                            fx:WaveTextBehavior.IsEnabled="True"
                            fx:WaveTextBehavior.Amplitude="3"
                            fx:WaveTextBehavior.Duration="0:0:2" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Typewriter Effect -->
            <StackPanel Spacing="12">
                <local:SectionHeader x:Name="TypewriterSectionHeader" SectionId="typewriter"
                    Title="{galloc:Localize Effects_Typewriter_Title}" />
                <TextBlock x:Name="TypewriterDescription"
                    Text="{galloc:Localize Effects_Typewriter_Description}"
                    Opacity="0.7" FontSize="13" Margin="0,0,0,8" />

                <controls:DaisyButton x:Name="ReplayTypewriterButton"
                    Content="{galloc:Localize Effects_Typewriter_ReplayButton}"
                    Click="ReplayTypewriter_Click" Variant="Ghost" Size="Small" Margin="0,0,0,8" />

                <Border Background="#1a1a1a" CornerRadius="12" Padding="24" BorderBrush="#333" BorderThickness="1">
                    <StackPanel Spacing="8">
                        <TextBlock Text="TERMINAL v1.0.4" Foreground="#666" FontSize="10" FontWeight="Bold" />
                        <TextBlock x:Name="TypewriterDemo"
                                   Text="C:\> flowery --init&#x0a;Initializing Flowery.NET library...&#x0a;Loading DaisyUI tokens...&#x0a;Applying modern transitions...&#x0a;Ready for high-fidelity UI."
                                   Foreground="#4ade80" FontFamily="Consolas,monospace" FontSize="14" LineHeight="24"
                                   fx:TypewriterBehavior.IsEnabled="True"
                                   fx:TypewriterBehavior.Speed="0:0:0.03" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Cursor Follow Effect (hidden on Android - touch scrolls instead) -->
            <StackPanel x:Name="CursorFollowSection" Spacing="12">
                <local:SectionHeader x:Name="CursorFollowSectionHeader" SectionId="cursor-follow"
                    Title="{galloc:Localize Effects_CursorFollow_Title}" />
                <TextBlock x:Name="CursorFollowDescription"
                    Text="{galloc:Localize Effects_CursorFollow_Description}"
                    Opacity="0.7" FontSize="13" Margin="0,0,0,8" />

                <TextBlock x:Name="CursorFollowInstruction"
                    Text="{galloc:Localize Effects_CursorFollow_Instruction}"
                    FontWeight="SemiBold" Margin="0,0,0,4" />
                <WrapPanel Orientation="Horizontal">
                    <!-- Circle (default) -->
                    <Border Width="200" MinWidth="180" Margin="0,0,8,8" Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" ClipToBounds="True" Padding="8">
                        <Panel MinHeight="80" Background="Transparent"
                               fx:CursorFollowBehavior.IsEnabled="True"
                               fx:CursorFollowBehavior.FollowerSize="20"
                               fx:CursorFollowBehavior.FollowerBrush="{DynamicResource DaisyPrimaryBrush}"
                               fx:CursorFollowBehavior.FollowerShape="Circle"
                               fx:CursorFollowBehavior.FollowerOpacity="1.0">
                            <TextBlock x:Name="CursorFollowCircle"
                                Text="{galloc:Localize Effects_CursorFollow_Circle}"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Opacity="0.5" FontSize="11" />
                        </Panel>
                    </Border>
                    <!-- Square 75% -->
                    <Border Width="200" MinWidth="180" Margin="0,0,8,8" Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" ClipToBounds="True" Padding="8">
                        <Panel MinHeight="80" Background="Transparent"
                               fx:CursorFollowBehavior.IsEnabled="True"
                               fx:CursorFollowBehavior.FollowerSize="24"
                               fx:CursorFollowBehavior.FollowerBrush="{DynamicResource DaisySecondaryBrush}"
                               fx:CursorFollowBehavior.FollowerShape="Square"
                               fx:CursorFollowBehavior.FollowerOpacity="0.75">
                            <TextBlock x:Name="CursorFollowSquare"
                                Text="{galloc:Localize Effects_CursorFollow_Square}"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Opacity="0.5" FontSize="11" />
                        </Panel>
                    </Border>
                    <!-- Ring 50% -->
                    <Border Width="200" MinWidth="180" Margin="0,0,8,8" Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" ClipToBounds="True" Padding="8">
                        <Panel MinHeight="80" Background="Transparent"
                               fx:CursorFollowBehavior.IsEnabled="True"
                               fx:CursorFollowBehavior.FollowerSize="28"
                               fx:CursorFollowBehavior.FollowerBrush="{DynamicResource DaisyAccentBrush}"
                               fx:CursorFollowBehavior.FollowerShape="Ring"
                               fx:CursorFollowBehavior.FollowerOpacity="0.5">
                            <TextBlock x:Name="CursorFollowRing"
                                Text="{galloc:Localize Effects_CursorFollow_Ring}"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Opacity="0.5" FontSize="11" />
                        </Panel>
                    </Border>
                </WrapPanel>
            </StackPanel>

            <!-- Effects Showcase (for GIF recording) -->
            <StackPanel Spacing="12">
                <local:SectionHeader x:Name="ShowcaseSectionHeader" SectionId="showcase"
                    Title="{galloc:Localize Effects_Showcase_Title}" />

                <controls:DaisyCard MaxWidth="430" Padding="24">
                    <StackPanel Spacing="20">
                        <!-- Reveal Effect -->
                        <StackPanel Spacing="8">
                            <TextBlock x:Name="RevealShowcaseLabel"
                                Text="{galloc:Localize Effects_Showcase_RevealLabel}"
                                FontSize="12" FontWeight="SemiBold"
                                Foreground="{DynamicResource DaisyPrimaryBrush}" />
                            <Border x:Name="RevealShowcaseDemo"
                                    Background="{DynamicResource DaisyPrimaryBrush}"
                                    CornerRadius="8" Padding="16" ClipToBounds="True"
                                    fx:RevealBehavior.IsEnabled="False">
                                <TextBlock x:Name="RevealShowcaseDemoText"
                                    Text="{galloc:Localize Effects_Showcase_RevealDemo}"
                                    Foreground="{DynamicResource DaisyPrimaryContentBrush}"
                                    FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" />
                            </Border>
                        </StackPanel>

                        <!-- Scramble Hover Effect -->
                        <StackPanel Spacing="8">
                            <TextBlock x:Name="ScrambleShowcaseLabel"
                                Text="{galloc:Localize Effects_Showcase_ScrambleLabel}"
                                FontSize="12" FontWeight="SemiBold"
                                Foreground="{DynamicResource DaisySecondaryBrush}" />
                            <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="16">
                                <TextBlock x:Name="ScrambleShowcaseDemo"
                                    Text="{galloc:Localize Effects_Showcase_ScrambleDemo}"
                                    FontSize="16" FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    fx:ScrambleHoverBehavior.IsEnabled="True"
                                    fx:ScrambleHoverBehavior.ScrambleChars="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                    fx:ScrambleHoverBehavior.Duration="0:0:0.8" />
                            </Border>
                        </StackPanel>

                        <!-- Wave Text Effect -->
                        <StackPanel Spacing="8">
                            <TextBlock x:Name="WaveShowcaseLabel"
                                Text="{galloc:Localize Effects_Showcase_WaveLabel}"
                                FontSize="12" FontWeight="SemiBold"
                                Foreground="{DynamicResource DaisyAccentBrush}" />
                            <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" Padding="16">
                                <TextBlock x:Name="WaveShowcaseDemo"
                                    Text="{galloc:Localize Effects_Showcase_WaveDemo}"
                                    FontSize="20" FontWeight="Bold"
                                    Foreground="{DynamicResource DaisyAccentBrush}"
                                    HorizontalAlignment="Center"
                                    fx:WaveTextBehavior.IsEnabled="True"
                                    fx:WaveTextBehavior.IsPerCharacter="True"
                                    fx:WaveTextBehavior.Amplitude="6"
                                    fx:WaveTextBehavior.Duration="0:0:1.5"
                                    fx:WaveTextBehavior.StaggerDelay="0:0:0.04" />
                            </Border>
                        </StackPanel>

                        <!-- Cursor Follow Effect -->
                        <StackPanel Spacing="8">
                            <TextBlock x:Name="CursorFollowShowcaseLabel"
                                Text="{galloc:Localize Effects_Showcase_CursorLabel}"
                                FontSize="12" FontWeight="SemiBold"
                                Foreground="{DynamicResource DaisyInfoBrush}" />
                            <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8" ClipToBounds="True" Padding="8">
                                <Panel x:Name="CursorFollowShowcasePanel" MinHeight="60" Background="Transparent"
                                       fx:CursorFollowBehavior.IsEnabled="True"
                                       fx:CursorFollowBehavior.FollowerSize="16"
                                       fx:CursorFollowBehavior.FollowerBrush="{DynamicResource DaisyInfoBrush}"
                                       fx:CursorFollowBehavior.FollowerShape="Ring"
                                       fx:CursorFollowBehavior.FollowerOpacity="0.8">
                                    <TextBlock x:Name="CursorFollowShowcaseDemo"
                                        Text="{galloc:Localize Effects_Showcase_CursorDemo}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" Opacity="0.5" FontSize="12" />
                                </Panel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </controls:DaisyCard>

                <TextBlock x:Name="ShowcaseFooterNote"
                    Text="{galloc:Localize Effects_Showcase_FooterNote}"
                    Opacity="0.7"
                    FontSize="13" Margin="0,8,0,0" />
                <controls:DaisyButton x:Name="StartShowcaseBtn" Click="StartShowcase_Click"
                    Content="{galloc:Localize Effects_Showcase_StartButton}"
                    Variant="Primary" Size="Small" HorizontalAlignment="Left" />
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</UserControl>
