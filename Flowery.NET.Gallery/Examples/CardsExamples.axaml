<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET"
             xmlns:local="clr-namespace:Flowery.NET.Gallery.Examples"
             x:Class="Flowery.NET.Gallery.Examples.CardsExamples">

    <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- Card -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="card" Title="Card" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <TextBlock Text="Basic Card" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <controls:DaisyCard>
                            <StackPanel Spacing="10">
                                <TextBlock Text="Card Title" FontWeight="Bold" FontSize="18"/>
                                <TextBlock Text="This is a simple card component." TextWrapping="Wrap"/>
                                <controls:DaisyButton Content="Action" Variant="Primary" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <TextBlock Text="Card with Image" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <controls:DaisyCard>
                            <StackPanel Spacing="10">
                                <Border Height="120" CornerRadius="8" ClipToBounds="True">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="#667eea" Offset="0"/>
                                            <GradientStop Color="#764ba2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                              Foreground="White" Opacity="0.3"
                                              Width="80" Height="80"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Featured Card" FontWeight="Bold" FontSize="18"/>
                                <TextBlock Text="A card with a gradient header and icon." TextWrapping="Wrap"/>
                                <controls:DaisyButton Content="Learn More" Variant="Secondary" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <TextBlock Text="Custom Body Padding/Font" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <controls:DaisyCard BodyPadding="16" BodyFontSize="12" TitleFontSize="16">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Compact Card" FontWeight="Bold"/>
                                <TextBlock Text="This card uses smaller padding and font sizes via BodyPadding, BodyFontSize properties." TextWrapping="Wrap"/>
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Glass Card -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Glass Card (IsGlass mode)" />
                <TextBlock Text="Cards can use glass/frosted effect with IsGlass property" Opacity="0.7" FontSize="13"/>
                <Border CornerRadius="16" Padding="32" Height="280">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Color="#667eea" Offset="0"/>
                            <GradientStop Color="#764ba2" Offset="0.5"/>
                            <GradientStop Color="#f093fb" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <controls:DaisyCard IsGlass="True" Width="250" Margin="10">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Glass Card" FontWeight="Bold" FontSize="18"/>
                                <TextBlock Text="This card uses IsGlass=True for a frosted glass effect." TextWrapping="Wrap"/>
                                <controls:DaisyButton Content="Action" Size="Small" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </controls:DaisyCard>

                        <controls:DaisyCard IsGlass="True" GlassTint="#000000" GlassOpacity="0.4" Width="250" Margin="10">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Dark Glass" FontWeight="Bold" FontSize="18" Foreground="White"/>
                                <TextBlock Text="Custom glass tint with GlassTint and GlassOpacity." TextWrapping="Wrap" Foreground="White" Opacity="0.9"/>
                            </StackPanel>
                        </controls:DaisyCard>
                    </WrapPanel>
                </Border>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- DaisyGlass Control - Simulated -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="DaisyGlass (Simulated Glass)" />
                <TextBlock Text="Default mode. Uses gradient overlays to simulate frosted glass. No real blur." Opacity="0.7" FontSize="13"/>
                <TextBlock Text="✅ Fastest performance (no rendering overhead)" FontSize="12" Foreground="Green" Opacity="0.8" Margin="0,-8,0,0"/>
                <TextBlock Text="❌ No actual blur of background content" FontSize="12" Foreground="Red" Opacity="0.8" Margin="0,-8,0,0"/>
                <Border CornerRadius="16" Height="320" ClipToBounds="True">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Color="#4facfe" Offset="0"/>
                            <GradientStop Color="#00f2fe" Offset="0.5"/>
                            <GradientStop Color="#43e97b" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <!-- Background text content -->
                        <StackPanel Margin="20">
                            <TextBlock Text="BACKGROUND TEXT" FontSize="32" FontWeight="Black" Foreground="White" Opacity="0.9"/>
                            <TextBlock Text="This text is NOT blurred - simulated mode only uses overlays" FontSize="16" Foreground="White" Opacity="0.8" Margin="0,8,0,0"/>
                            <TextBlock Text="★ ★ ★ ★ ★" FontSize="28" Foreground="Yellow" Margin="0,12,0,0"/>
                            <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." FontSize="14" Foreground="White" Opacity="0.7" Margin="0,8,0,0" TextWrapping="Wrap" Width="400"/>
                        </StackPanel>
                        <TextBlock Text="SHARP" FontSize="72" FontWeight="Black" Foreground="#40FFFFFF"
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"/>
                        <TextBlock Text="●●●" FontSize="48" Foreground="White" Opacity="0.5"
                                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,60"/>

                        <!-- Glass panels on top -->
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="32">
                            <controls:DaisyGlass Padding="24" CornerRadius="16" Margin="10" Width="220">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Simulated" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="No real blur effect." TextWrapping="Wrap"/>
                                </StackPanel>
                            </controls:DaisyGlass>

                            <controls:DaisyGlass Padding="24" CornerRadius="16" Margin="10" Width="220"
                                                 GlassTint="#1a1a2e" GlassTintOpacity="0.7">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Dark Tint" FontWeight="Bold" FontSize="18" Foreground="White"/>
                                    <TextBlock Text="Just tinted overlay." TextWrapping="Wrap" Foreground="White" Opacity="0.85"/>
                                </StackPanel>
                            </controls:DaisyGlass>
                        </WrapPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- DaisyGlass Control - Bitmap Capture Mode -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="DaisyGlass (Bitmap Capture Mode)" />
                <TextBlock Text="BlurMode=BitmapCapture. Captures background once and blurs it." Opacity="0.7" FontSize="13"/>
                <TextBlock Text="✅ Good quality blur, works without SkiaSharp GPU shaders" FontSize="12" Foreground="Green" Opacity="0.8" Margin="0,-8,0,0"/>
                <TextBlock Text="❌ Static snapshot (doesn't update if content moves), slower initial render" FontSize="12" Foreground="Red" Opacity="0.8" Margin="0,-8,0,0"/>
                <Border CornerRadius="16" Height="280" ClipToBounds="True">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Color="#667eea" Offset="0"/>
                            <GradientStop Color="#f093fb" Offset="0.5"/>
                            <GradientStop Color="#f5576c" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel Margin="20">
                            <TextBlock Text="BACKGROUND TEXT" FontSize="32" FontWeight="Black" Foreground="White" Opacity="0.9"/>
                            <TextBlock Text="This text is blurred through the glass" FontSize="16" Foreground="White" Opacity="0.8" Margin="0,8,0,0"/>
                            <TextBlock Text="★ ★ ★ ★ ★" FontSize="28" Foreground="Yellow" Margin="0,12,0,0"/>
                            <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore."
                                       FontSize="14" Foreground="#404040" Opacity="0.9" Margin="0,8,0,0" TextWrapping="Wrap" Width="500"/>
                        </StackPanel>
                        <TextBlock Text="SHARP" FontSize="72" FontWeight="Black" Foreground="#40FFFFFF"
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"/>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="32">
                            <controls:DaisyGlass Padding="24" CornerRadius="16" Margin="10" Width="220"
                                                 EnableBackdropBlur="True" BlurMode="BitmapCapture" GlassBlur="10">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Bitmap Mode" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="GlassBlur=10" TextWrapping="Wrap"/>
                                </StackPanel>
                            </controls:DaisyGlass>

                            <controls:DaisyGlass Padding="24" CornerRadius="16" Margin="10" Width="220"
                                                 EnableBackdropBlur="True" BlurMode="BitmapCapture" GlassBlur="20" GlassTint="#FFFFFF" GlassTintOpacity="0.2">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="With Tint" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="GlassBlur=20" TextWrapping="Wrap"/>
                                </StackPanel>
                            </controls:DaisyGlass>
                        </WrapPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- DaisyGlass Control - SkiaSharp Mode (Experimental) -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="DaisyGlass (SkiaSharp Mode Matrix)" />
                <TextBlock Text="BlurMode=SkiaSharp. Real-time GPU-accelerated blur with Saturation control." Opacity="0.7" FontSize="13"/>
                <TextBlock Text="✅ Best quality, real-time updates, saturation support" FontSize="12" Foreground="Green" Opacity="0.8" Margin="0,-8,0,0"/>
                <TextBlock Text="⚠️ Experimental, higher GPU usage" FontSize="12" Foreground="Orange" Opacity="0.8" Margin="0,-8,0,0"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Border CornerRadius="16" MinHeight="600" ClipToBounds="True">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                <GradientStop Color="#11998e" Offset="0"/>
                                <GradientStop Color="#38ef7d" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <!-- Background Pattern -->
                            <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <!-- Clean background, content is now inside tiles -->
                            </Canvas>

                            <!-- Matrix Container -->
                            <StackPanel x:Name="SkiaMatrixContainer"
                                        Orientation="Vertical"
                                        Spacing="8"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="20"/>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Full Width Example -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="DaisyGlass (Full Width Example)" />
                <TextBlock Text="Blur=30, Saturation=0.5 (Milky Effect)" Opacity="0.7" FontSize="13"/>
                <Border CornerRadius="16" Height="280" ClipToBounds="True">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Color="#11998e" Offset="0"/>
                            <GradientStop Color="#38ef7d" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel Margin="20">
                            <TextBlock Text="FULL WIDTH TEST" FontSize="32" FontWeight="Black" Foreground="White" Opacity="0.9"/>
                            <TextBlock Text="Testing SkiaSharp GPU blur + Saturation" FontSize="16" Foreground="White" Opacity="0.8" Margin="0,8,0,0"/>
                            <TextBlock Text="◆ ◆ ◆ ◆ ◆" FontSize="28" Foreground="#FFD700" Margin="0,12,0,0"/>
                            <TextBlock Text="Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia curae."
                                       FontSize="14" Foreground="#2D4A3E" Opacity="0.9" Margin="0,8,0,0" TextWrapping="Wrap" Width="500"/>
                        </StackPanel>
                        <TextBlock Text="GPU" FontSize="72" FontWeight="Black" Foreground="#40FFFFFF"
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"/>

                        <controls:DaisyGlass Margin="40" Height="120" VerticalAlignment="Center"
                                             EnableBackdropBlur="True" BlurMode="SkiaSharp"
                                             GlassBlur="30" GlassSaturation="0.5"
                                             GlassTint="#FFFFFF" GlassTintOpacity="0.15"
                                             GlassBorderOpacity="0.3">
                            <StackPanel Spacing="8" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Milky Glass Panel" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="Blur=30, Sat=0.5" HorizontalAlignment="Center" Opacity="0.8"/>
                            </StackPanel>
                        </controls:DaisyGlass>
                    </Grid>
                </Border>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</UserControl>
